@model IEnumerable<XenonClinic.Web.Models.ExpenseDto>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

<div class="card">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Localizer["Expense_Number"]</th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Category"]</th>
                            <th>@Localizer["Description"]</th>
                            <th>@Localizer["Vendor"]</th>
                            <th class="text-end">@Localizer["Amount"]</th>
                            <th>@Localizer["Status"]</th>
                            <th>@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expense in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@expense.ExpenseNumber</strong>
                                    @if (!string.IsNullOrEmpty(expense.InvoiceNumber))
                                    {
                                        <br />
                                        <small class="text-muted">@Localizer["Invoice"]: @expense.InvoiceNumber</small>
                                    }
                                </td>
                                <td>
                                    @expense.ExpenseDate.ToString("yyyy-MM-dd")
                                    @if (expense.InvoiceDate.HasValue)
                                    {
                                        <br />
                                        <small class="text-muted">@Localizer["Invoice"]: @expense.InvoiceDate.Value.ToString("yyyy-MM-dd")</small>
                                    }
                                </td>
                                <td>@expense.ExpenseCategoryName</td>
                                <td>
                                    @expense.Description
                                    @if (!string.IsNullOrEmpty(expense.Notes))
                                    {
                                        <br />
                                        <small class="text-muted">@expense.Notes</small>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(expense.Vendor))
                                    {
                                        @expense.Vendor
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <strong class="text-danger">@expense.Amount.ToString("N2")</strong>
                                </td>
                                <td>
                                    @{
                                        var statusClass = expense.Status switch
                                        {
                                            XenonClinic.Core.Enums.ExpenseStatus.Pending => "warning",
                                            XenonClinic.Core.Enums.ExpenseStatus.Approved => "info",
                                            XenonClinic.Core.Enums.ExpenseStatus.Paid => "success",
                                            XenonClinic.Core.Enums.ExpenseStatus.Rejected => "danger",
                                            _ => "secondary"
                                        };
                                    }
                                    <span class="badge bg-@statusClass">@Localizer[$"ExpenseStatus_{expense.Status}"]</span>
                                    @if (expense.ApprovedBy != null)
                                    {
                                        <br />
                                        <small class="text-muted">@Localizer["By"]: @expense.ApprovedBy</small>
                                    }
                                </td>
                                <td>
                                    @if (expense.Status == XenonClinic.Core.Enums.ExpenseStatus.Pending)
                                    {
                                        <form id="approveForm@(expense.Id)" asp-action="ApproveExpense" asp-route-id="@expense.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="button" onclick="approveExpense(@expense.Id)" class="btn btn-sm btn-success">
                                                <i class="bi bi-check-circle"></i> @Localizer["Approve"]
                                            </button>
                                        </form>
                                    }
                                    @if (expense.Status == XenonClinic.Core.Enums.ExpenseStatus.Approved)
                                    {
                                        <form id="payForm@(expense.Id)" asp-action="PayExpense" asp-route-id="@expense.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="button" onclick="payExpense(@expense.Id)" class="btn btn-sm btn-primary">
                                                <i class="bi bi-cash"></i> @Localizer["Pay"]
                                            </button>
                                        </form>
                                    }
                                    @if (expense.Status == XenonClinic.Core.Enums.ExpenseStatus.Paid && expense.PaymentDate.HasValue)
                                    {
                                        <small class="text-muted">
                                            @Localizer["Paid"]: @expense.PaymentDate.Value.ToString("yyyy-MM-dd")
                                        </small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-receipt fs-1 d-block mb-3 text-muted"></i>
                <h5 class="text-muted">@Localizer["No_Expenses_Found"]</h5>
            </div>
        }
    </div>
</div>
