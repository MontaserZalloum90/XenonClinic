@model XenonClinic.Web.Models.FinanceDashboardViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Finance_Dashboard"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Finance_Dashboard"]</h2>
        <div>
            <a asp-action="CreateTransaction" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @Localizer["New_Transaction"]
            </a>
            <a asp-action="CreateExpense" class="btn btn-success">
                <i class="bi bi-receipt"></i> @Localizer["New_Expense"]
            </a>
        </div>
    </div>

    <!-- Financial Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">@Localizer["Total_Assets"]</h6>
                            <h4 class="mb-0">@Model.TotalAssets.ToString("N2")</h4>
                        </div>
                        <i class="bi bi-wallet2 fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">@Localizer["Total_Liabilities"]</h6>
                            <h4 class="mb-0">@Model.TotalLiabilities.ToString("N2")</h4>
                        </div>
                        <i class="bi bi-credit-card fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">@Localizer["Total_Equity"]</h6>
                            <h4 class="mb-0">@Model.TotalEquity.ToString("N2")</h4>
                        </div>
                        <i class="bi bi-piggy-bank fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">@Localizer["Net_Profit"]</h6>
                            <h4 class="mb-0">@Model.NetProfit.ToString("N2")</h4>
                        </div>
                        <i class="bi bi-graph-up fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Performance -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">@Localizer["Monthly_Revenue"]</h6>
                    <h4 class="text-success">@Model.MonthlyRevenue.ToString("N2")</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">@Localizer["Monthly_Expenses"]</h6>
                    <h4 class="text-danger">@Model.MonthlyExpenses.ToString("N2")</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">@Localizer["Pending_Expenses"]</h6>
                    <h4 class="text-warning">@Model.PendingExpenses.ToString("N2")</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">@Localizer["Pending_Count"]</h6>
                    <h4 class="text-info">@Model.PendingExpenseCount</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["Quick_Actions"]</h5>
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a asp-action="Accounts" class="btn btn-outline-primary w-100">
                                <i class="bi bi-list-ul"></i> @Localizer["Chart_of_Accounts"]
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-action="ExpenseCategories" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-tags"></i> @Localizer["Expense_Categories"]
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-action="Expenses" class="btn btn-outline-success w-100">
                                <i class="bi bi-receipt"></i> @Localizer["All_Expenses"]
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-action="Transactions" class="btn btn-outline-info w-100">
                                <i class="bi bi-arrow-left-right"></i> @Localizer["All_Transactions"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Transactions -->
        <div class="col-md-7 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Localizer["Recent_Transactions"]</h5>
                    <a asp-action="Transactions" class="btn btn-sm btn-outline-primary">@Localizer["View_All"]</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentTransactions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>@Localizer["Transaction_Number"]</th>
                                        <th>@Localizer["Date"]</th>
                                        <th>@Localizer["Account"]</th>
                                        <th>@Localizer["Type"]</th>
                                        <th class="text-end">@Localizer["Amount"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in Model.RecentTransactions)
                                    {
                                        <tr>
                                            <td>@transaction.TransactionNumber</td>
                                            <td>@transaction.TransactionDate.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <small class="text-muted">@transaction.AccountCode</small><br />
                                                @transaction.AccountName
                                            </td>
                                            <td>
                                                @{
                                                    var typeClass = transaction.TransactionType == XenonClinic.Core.Enums.TransactionType.Debit ? "success" : "danger";
                                                }
                                                <span class="badge bg-@typeClass">@Localizer[$"TransactionType_{transaction.TransactionType}"]</span>
                                            </td>
                                            <td class="text-end">@transaction.Amount.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox fs-1 d-block mb-2 text-muted"></i>
                            <p class="text-muted">@Localizer["No_Transactions_Found"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Pending Expenses -->
        <div class="col-md-5 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Localizer["Pending_Expenses"]</h5>
                    <a asp-action="Expenses" class="btn btn-sm btn-outline-primary">@Localizer["View_All"]</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.PendingExpensesList.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var expense in Model.PendingExpensesList)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@expense.ExpenseNumber</h6>
                                            <p class="mb-1 small">@expense.Description</p>
                                            <small class="text-muted">@expense.ExpenseCategoryName</small>
                                        </div>
                                        <div class="text-end">
                                            <strong class="text-danger">@expense.Amount.ToString("N2")</strong>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-check-circle fs-1 d-block mb-2 text-success"></i>
                            <p class="text-muted">@Localizer["No_Pending_Expenses"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top Expense Categories -->
    @if (Model.TopExpenseCategories.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">@Localizer["Top_Expense_Categories"] (@Localizer["This_Month"])</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Category"]</th>
                                        <th class="text-end">@Localizer["Amount"]</th>
                                        <th style="width: 50%">@Localizer["Percentage"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var totalCategoryExpenses = Model.TopExpenseCategories.Values.Sum();
                                    }
                                    @foreach (var category in Model.TopExpenseCategories)
                                    {
                                        var percentage = totalCategoryExpenses > 0 ? (category.Value / totalCategoryExpenses * 100) : 0;
                                        <tr>
                                            <td>@category.Key</td>
                                            <td class="text-end">@category.Value.ToString("N2")</td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" style="width: @percentage%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">
                                                        @percentage.ToString("N1")%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
