@model IEnumerable<XenonClinic.Web.Models.FinancialTransactionDto>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Transactions"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Transactions"]</h2>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> @Localizer["Back_to_Dashboard"]
            </a>
            <a asp-action="CreateTransaction" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @Localizer["New_Transaction"]
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Transaction_Number"]</th>
                                <th>@Localizer["Date"]</th>
                                <th>@Localizer["Account"]</th>
                                <th>@Localizer["Description"]</th>
                                <th>@Localizer["Type"]</th>
                                <th class="text-end">@Localizer["Amount"]</th>
                                <th>@Localizer["Status"]</th>
                                <th>@Localizer["Reference"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@transaction.TransactionNumber</strong>
                                    </td>
                                    <td>@transaction.TransactionDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <small class="text-muted">@transaction.AccountCode</small><br />
                                        @transaction.AccountName
                                    </td>
                                    <td>
                                        @transaction.Description
                                        @if (!string.IsNullOrEmpty(transaction.ReferenceNumber))
                                        {
                                            <br />
                                            <small class="text-muted">@Localizer["Ref"]: @transaction.ReferenceNumber</small>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var typeClass = transaction.TransactionType == XenonClinic.Core.Enums.TransactionType.Debit ? "success" : "danger";
                                            var typeIcon = transaction.TransactionType == XenonClinic.Core.Enums.TransactionType.Debit ? "arrow-up-circle" : "arrow-down-circle";
                                        }
                                        <span class="badge bg-@typeClass">
                                            <i class="bi bi-@typeIcon"></i> @Localizer[$"TransactionType_{transaction.TransactionType}"]
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <strong class="@(transaction.TransactionType == XenonClinic.Core.Enums.TransactionType.Debit ? "text-success" : "text-danger")">
                                            @transaction.Amount.ToString("N2")
                                        </strong>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = transaction.Status switch
                                            {
                                                XenonClinic.Core.Enums.VoucherStatus.Draft => "secondary",
                                                XenonClinic.Core.Enums.VoucherStatus.Approved => "info",
                                                XenonClinic.Core.Enums.VoucherStatus.Posted => "success",
                                                XenonClinic.Core.Enums.VoucherStatus.Cancelled => "danger",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@Localizer[$"VoucherStatus_{transaction.Status}"]</span>
                                    </td>
                                    <td>
                                        @if (transaction.ExpenseId.HasValue)
                                        {
                                            <small>
                                                <i class="bi bi-receipt"></i> @transaction.ExpenseNumber
                                            </small>
                                        }
                                        else if (transaction.SaleId.HasValue)
                                        {
                                            <small>
                                                <i class="bi bi-cart"></i> @transaction.SaleNumber
                                            </small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">@Localizer["Manual_Entry"]</small>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-arrow-left-right fs-1 d-block mb-3 text-muted"></i>
                    <h5 class="text-muted">@Localizer["No_Transactions_Found"]</h5>
                    <p class="text-muted">@Localizer["Get_Started_Create_Transaction"]</p>
                    <a asp-action="CreateTransaction" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> @Localizer["Create_First_Transaction"]
                    </a>
                </div>
            }
        </div>
    </div>
</div>
