@model IEnumerable<XenonClinic.Web.Models.ExpenseDto>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Expenses"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Expenses"]</h2>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> @Localizer["Back_to_Dashboard"]
            </a>
            <a asp-action="CreateExpense" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @Localizer["New_Expense"]
            </a>
        </div>
    </div>

    <!-- Filter Tabs -->
    <ul class="nav nav-tabs mb-3" id="expensesTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button">
                @Localizer["All_Expenses"] <span class="badge bg-secondary ms-1">@Model.Count()</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button">
                @Localizer["Pending"] <span class="badge bg-warning ms-1">@Model.Count(e => e.Status == XenonClinic.Core.Enums.ExpenseStatus.Pending)</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button">
                @Localizer["Approved"] <span class="badge bg-info ms-1">@Model.Count(e => e.Status == XenonClinic.Core.Enums.ExpenseStatus.Approved)</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="paid-tab" data-bs-toggle="tab" data-bs-target="#paid" type="button">
                @Localizer["Paid"] <span class="badge bg-success ms-1">@Model.Count(e => e.Status == XenonClinic.Core.Enums.ExpenseStatus.Paid)</span>
            </button>
        </li>
    </ul>

    <div class="tab-content" id="expensesTabContent">
        <!-- All Expenses -->
        <div class="tab-pane fade show active" id="all" role="tabpanel">
            @await Html.PartialAsync("_ExpenseTable", Model)
        </div>

        <!-- Pending Expenses -->
        <div class="tab-pane fade" id="pending" role="tabpanel">
            @await Html.PartialAsync("_ExpenseTable", Model.Where(e => e.Status == XenonClinic.Core.Enums.ExpenseStatus.Pending))
        </div>

        <!-- Approved Expenses -->
        <div class="tab-pane fade" id="approved" role="tabpanel">
            @await Html.PartialAsync("_ExpenseTable", Model.Where(e => e.Status == XenonClinic.Core.Enums.ExpenseStatus.Approved))
        </div>

        <!-- Paid Expenses -->
        <div class="tab-pane fade" id="paid" role="tabpanel">
            @await Html.PartialAsync("_ExpenseTable", Model.Where(e => e.Status == XenonClinic.Core.Enums.ExpenseStatus.Paid))
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function approveExpense(id) {
            if (confirm('@Localizer["Confirm_Approve_Expense"]')) {
                document.getElementById('approveForm' + id).submit();
            }
        }

        function payExpense(id) {
            if (confirm('@Localizer["Confirm_Pay_Expense"]')) {
                document.getElementById('payForm' + id).submit();
            }
        }
    </script>
}
