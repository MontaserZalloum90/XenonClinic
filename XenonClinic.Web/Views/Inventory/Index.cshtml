@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.InventoryDashboardViewModel
@{
    ViewData["Title"] = Localizer["Inventory"];
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-3 gap-2">
    <h2 class="mb-0">@Localizer["Inventory"] @Localizer["Dashboard"]</h2>
    <div class="d-flex gap-2 flex-wrap">
        <a asp-action="CreateItem" class="btn btn-xenon"><i class="bi bi-plus-lg"></i> @Localizer["NewItem"]</a>
        <a asp-action="CreateTransaction" class="btn btn-outline-primary"><i class="bi bi-arrow-left-right"></i> @Localizer["NewTransaction"]</a>
    </div>
</div>

<!-- Key Metrics -->
<div class="row g-3 mb-4">
    <div class="col-md-3 col-sm-6">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="text-muted small">@Localizer["TotalItems"]</div>
                <div class="fs-3 fw-bold text-primary">@Model.TotalItems</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="text-muted small">@Localizer["LowStockItems"]</div>
                <div class="fs-3 fw-bold text-warning">@Model.LowStockItems</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="text-muted small">@Localizer["OutOfStockItems"]</div>
                <div class="fs-3 fw-bold text-danger">@Model.OutOfStockItems</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="text-muted small">@Localizer["TotalValue"]</div>
                <div class="fs-3 fw-bold text-success">AED @Model.TotalInventoryValue.ToString("N2")</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <!-- Low Stock Alerts -->
    <div class="col-lg-6 col-md-12">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">@Localizer["LowStockAlerts"]</h5>
                    <a asp-action="Items" class="btn btn-sm btn-outline-secondary">@Localizer["ViewAll"]</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["ItemCode"]</th>
                                <th>@Localizer["Name"]</th>
                                <th class="text-end">@Localizer["Stock"]</th>
                                <th class="text-end">@Localizer["Reorder"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LowStockAlerts)
                            {
                                <tr class="@(item.IsOutOfStock ? "table-danger" : "table-warning")">
                                    <td>@item.ItemCode</td>
                                    <td>@item.Name</td>
                                    <td class="text-end">@item.QuantityOnHand</td>
                                    <td class="text-end">@item.ReorderLevel</td>
                                </tr>
                            }
                            @if (!Model.LowStockAlerts.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">@Localizer["NoLowStockItems"]</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Transactions -->
    <div class="col-lg-6 col-md-12">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">@Localizer["RecentTransactions"]</h5>
                    <a asp-action="Transactions" class="btn btn-sm btn-outline-secondary">@Localizer["ViewAll"]</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Date"]</th>
                                <th>@Localizer["Item"]</th>
                                <th>@Localizer["Type"]</th>
                                <th class="text-end">@Localizer["Qty"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trans in Model.RecentTransactions)
                            {
                                <tr>
                                    <td>@trans.TransactionDate.ToString("dd MMM")</td>
                                    <td>@trans.ItemCode</td>
                                    <td><span class="badge bg-secondary">@trans.TransactionTypeDisplay</span></td>
                                    <td class="text-end">@trans.Quantity</td>
                                </tr>
                            }
                            @if (!Model.RecentTransactions.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">@Localizer["NoTransactions"]</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recently Added Items -->
<div class="row g-3 mt-2">
    <div class="col-12">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">@Localizer["RecentlyAdded"]</h5>
                    <a asp-action="Items" class="btn btn-sm btn-outline-secondary">@Localizer["ViewAll"]</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover table-xenon mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["ItemCode"]</th>
                                <th>@Localizer["Name"]</th>
                                <th class="d-none d-md-table-cell">@Localizer["Category"]</th>
                                <th class="text-end">@Localizer["Stock"]</th>
                                <th class="text-end d-none d-lg-table-cell">@Localizer["CostPrice"]</th>
                                <th class="text-end d-none d-lg-table-cell">@Localizer["SellingPrice"]</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RecentlyAddedItems)
                            {
                                <tr>
                                    <td>@item.ItemCode</td>
                                    <td>@item.Name</td>
                                    <td class="d-none d-md-table-cell">@item.CategoryDisplay</td>
                                    <td class="text-end">
                                        <span class="badge @(item.IsOutOfStock ? "bg-danger" : item.IsLowStock ? "bg-warning" : "bg-success")">
                                            @item.QuantityOnHand
                                        </span>
                                    </td>
                                    <td class="text-end d-none d-lg-table-cell">AED @item.CostPrice.ToString("N2")</td>
                                    <td class="text-end d-none d-lg-table-cell">AED @item.SellingPrice.ToString("N2")</td>
                                    <td class="text-end">
                                        <a asp-action="EditItem" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">@Localizer["Edit"]</a>
                                    </td>
                                </tr>
                            }
                            @if (!Model.RecentlyAddedItems.Any())
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">@Localizer["NoItems"]</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
