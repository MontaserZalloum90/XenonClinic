@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using XenonClinic.Core.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IViewLocalizer Localizer
@{
    var user = await UserManager.GetUserAsync(User);
    var branchColor = user?.PrimaryBranch?.PrimaryColor ?? "#1F6FEB";
    var branchLogo = user?.PrimaryBranch?.LogoPath ?? "/images/xenon-default-logo.svg";

    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.Culture.Name ?? "en";
    var isRtl = currentCulture == "ar";
    var dir = isRtl ? "rtl" : "ltr";
}
<!DOCTYPE html>
<html lang="@currentCulture" dir="@dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>XENON Clinic</title>
    @if (isRtl)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" />
    }
    else
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">
    <div class="d-flex">
        <nav class="sidebar p-3" style="background: linear-gradient(180deg, @branchColor 0%, #0f172a 100%);">
            <div class="d-flex align-items-center mb-4">
                <img src="@branchLogo" alt="Logo" class="logo me-2" />
                <div>
                    <div class="fw-bold text-white">XENON</div>
                    <small class="text-white-50">Audiology CRM</small>
                </div>
            </div>
            <ul class="nav flex-column gap-2">
                <li class="nav-item"><a class="nav-link text-white" href="/@" asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer"></i> @Localizer["Dashboard"]</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Patients" asp-action="Index"><i class="bi bi-people"></i> @Localizer["Patients"]</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Inventory" asp-action="Index"><i class="bi bi-box-seam"></i> @Localizer["Inventory"]</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="HR" asp-action="Index"><i class="bi bi-person-badge"></i> @Localizer["HR"]</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Sales" asp-action="Index"><i class="bi bi-receipt"></i> @Localizer["Sales"]</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Procurement" asp-action="Index"><i class="bi bi-cart-check"></i> @Localizer["Procurement"]</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Lab" asp-action="Index"><i class="bi bi-clipboard2-pulse"></i> @Localizer["Laboratory"]</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Finance" asp-action="Index"><i class="bi bi-currency-dollar"></i> @Localizer["Finance"]</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Analytics" asp-action="Index"><i class="bi bi-graph-up"></i> @Localizer["Analytics"]</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Analytics" asp-action="Audiology"><i class="bi bi-ear"></i> @Localizer["Audiology"]</a></li>
            </ul>
        </nav>
        <div class="flex-grow-1 d-flex flex-column min-vh-100">
            <nav class="navbar navbar-expand px-4 shadow-sm" style="background-color: #ffffff;">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar">â˜°</button>
                    <div class="text-muted small">@Localizer["Branch"]: @user?.PrimaryBranch?.Name ?? "Default"</div>
                    <div class="d-flex align-items-center gap-3 ms-auto">
                        <!-- Language Switcher -->
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-globe"></i> @Localizer["Language"]
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <form asp-controller="Language" asp-action="SetLanguage" method="post" class="dropdown-item">
                                        <input type="hidden" name="culture" value="en" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button type="submit" class="btn btn-link text-decoration-none text-dark p-0 w-100 text-start">
                                            @Localizer["English"]
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-controller="Language" asp-action="SetLanguage" method="post" class="dropdown-item">
                                        <input type="hidden" name="culture" value="ar" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button type="submit" class="btn btn-link text-decoration-none text-dark p-0 w-100 text-start">
                                            @Localizer["Arabic"]
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                        <!-- User Dropdown -->
                        <div class="dropdown">
                            <a class="d-flex align-items-center text-decoration-none" href="#" data-bs-toggle="dropdown">
                                <span class="me-2 text-dark">@user?.Email</span>
                                <i class="bi bi-person-circle fs-4 text-primary"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#">@Localizer["Profile"]</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">@Localizer["Logout"]</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <main class="container-fluid py-4 flex-grow-1">
                @RenderBody()
            </main>
            <footer class="text-center py-3 text-muted small">Powered by XENON Technologies</footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
