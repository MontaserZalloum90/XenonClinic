@using Microsoft.AspNetCore.Identity
@using XenonClinic.Core.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
    var branchColor = user?.PrimaryBranch?.PrimaryColor ?? "#1F6FEB";
    var branchLogo = user?.PrimaryBranch?.LogoPath ?? "/images/xenon-default-logo.svg";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>XENON Clinic</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">
    <div class="d-flex">
        <nav class="sidebar p-3" style="background: linear-gradient(180deg, @branchColor 0%, #0f172a 100%);">
            <div class="d-flex align-items-center mb-4">
                <img src="@branchLogo" alt="Logo" class="logo me-2" />
                <div>
                    <div class="fw-bold text-white">XENON</div>
                    <small class="text-white-50">Audiology CRM</small>
                </div>
            </div>
            <ul class="nav flex-column gap-2">
                <li class="nav-item"><a class="nav-link text-white" href="/@" asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer"></i> Dashboard</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Patients" asp-action="Index"><i class="bi bi-people"></i> Patients</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Analytics" asp-action="Index"><i class="bi bi-graph-up"></i> Analytics</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Analytics" asp-action="Audiology"><i class="bi bi-ear"></i> Audiology Insights</a></li>
            </ul>
        </nav>
        <div class="flex-grow-1 d-flex flex-column min-vh-100">
            <nav class="navbar navbar-expand px-4 shadow-sm" style="background-color: #ffffff;">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar">â˜°</button>
                    <div class="text-muted small">Active Branch: @user?.PrimaryBranch?.Name ?? "Default"</div>
                    <div class="dropdown">
                        <a class="d-flex align-items-center text-decoration-none" href="#" data-bs-toggle="dropdown">
                            <span class="me-2 text-dark">@user?.Email</span>
                            <i class="bi bi-person-circle fs-4 text-primary"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <main class="container-fluid py-4 flex-grow-1">
                @RenderBody()
            </main>
            <footer class="text-center py-3 text-muted small">Powered by XENON Technologies</footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
