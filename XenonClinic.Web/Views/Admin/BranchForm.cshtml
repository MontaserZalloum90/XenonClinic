@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.Admin.BranchFormViewModel
@{
    ViewData["Title"] = Model.IsEdit ? Localizer["EditBranch"] : Localizer["CreateBranch"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">@ViewData["Title"]</h4>
    <a asp-action="Branches" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>@Localizer["BackToList"]
    </a>
</div>

<div class="card card-rounded">
    <div class="card-body">
        <form asp-action="@(Model.IsEdit ? "EditBranch" : "CreateBranch")" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="CompanyId" class="form-label">@Localizer["Company"] *</label>
                    <select asp-for="CompanyId" class="form-select" required>
                        <option value="">@Localizer["SelectCompany"]</option>
                        @foreach (var company in Model.AvailableCompanies)
                        {
                            <option value="@company.Id">@company.TenantName - @company.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label asp-for="Code" class="form-label">@Localizer["Code"] *</label>
                    <input asp-for="Code" class="form-control" required />
                </div>
            </div>

            <div class="row g-3 mt-2">
                <div class="col-12">
                    <label asp-for="Name" class="form-label">@Localizer["Name"] *</label>
                    <input asp-for="Name" class="form-control" required />
                </div>
            </div>

            <h6 class="mt-4 mb-3 border-bottom pb-2">@Localizer["ContactInformation"]</h6>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                    <input asp-for="Email" type="email" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label">@Localizer["Phone"]</label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <div class="col-md-8">
                    <label asp-for="Address" class="form-label">@Localizer["Address"]</label>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="City" class="form-label">@Localizer["City"]</label>
                    <input asp-for="City" class="form-control" />
                </div>
            </div>

            <h6 class="mt-4 mb-3 border-bottom pb-2">@Localizer["WorkingHours"]</h6>
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="OpeningTime" class="form-label">@Localizer["OpeningTime"]</label>
                    <input asp-for="OpeningTime" type="time" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="ClosingTime" class="form-label">@Localizer["ClosingTime"]</label>
                    <input asp-for="ClosingTime" type="time" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="WorkingDays" class="form-label">@Localizer["WorkingDays"]</label>
                    <input asp-for="WorkingDays" class="form-control" placeholder="Mon,Tue,Wed,Thu,Fri" />
                </div>
            </div>

            <h6 class="mt-4 mb-3 border-bottom pb-2">@Localizer["Settings"]</h6>
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="Currency" class="form-label">@Localizer["Currency"]</label>
                    <select asp-for="Currency" class="form-select">
                        <option value="AED">AED</option>
                        <option value="USD">USD</option>
                        <option value="EUR">EUR</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label asp-for="PrimaryColor" class="form-label">@Localizer["PrimaryColor"]</label>
                    <input asp-for="PrimaryColor" type="color" class="form-control form-control-color w-100" />
                </div>
            </div>

            <div class="row g-3 mt-3">
                <div class="col-md-6">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label">@Localizer["Active"]</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check">
                        <input asp-for="IsMainBranch" class="form-check-input" type="checkbox" />
                        <label asp-for="IsMainBranch" class="form-check-label">@Localizer["MainBranch"]</label>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>@Localizer["Save"]
                </button>
                <a asp-action="Branches" class="btn btn-outline-secondary">@Localizer["Cancel"]</a>
            </div>
        </form>
    </div>
</div>
