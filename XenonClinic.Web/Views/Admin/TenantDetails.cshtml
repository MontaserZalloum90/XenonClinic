@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.Admin.TenantDetailsViewModel
@{
    ViewData["Title"] = Model.Tenant.Name;
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-2">
    <div>
        <h4 class="mb-0">@Model.Tenant.Name</h4>
        <small class="text-muted"><code>@Model.Tenant.Code</code></small>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="EditTenant" asp-route-id="@Model.Tenant.Id" class="btn btn-outline-primary">
            <i class="bi bi-pencil me-1"></i>@Localizer["Edit"]
        </a>
        <a asp-action="Tenants" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>@Localizer["BackToList"]
        </a>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-3 col-sm-6">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="text-muted small">@Localizer["Companies"]</div>
                <div class="fs-3 fw-bold text-primary">@Model.Statistics.CompanyCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="text-muted small">@Localizer["Branches"]</div>
                <div class="fs-3 fw-bold text-success">@Model.Statistics.BranchCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="text-muted small">@Localizer["Users"]</div>
                <div class="fs-3 fw-bold text-info">@Model.Statistics.UserCount</div>
                <div class="small text-muted">@Model.Statistics.ActiveUserCount @Localizer["Active"]</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="text-muted small">@Localizer["Patients"]</div>
                <div class="fs-3 fw-bold text-warning">@Model.Statistics.PatientCount</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card card-rounded">
            <div class="card-body">
                <h5 class="card-title mb-3">@Localizer["TenantInformation"]</h5>
                <dl class="row mb-0">
                    <dt class="col-sm-5">@Localizer["Status"]</dt>
                    <dd class="col-sm-7">
                        @if (Model.Tenant.IsActive)
                        {
                            <span class="badge bg-success">@Localizer["Active"]</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Localizer["Inactive"]</span>
                        }
                    </dd>
                    <dt class="col-sm-5">@Localizer["Plan"]</dt>
                    <dd class="col-sm-7">@(Model.Tenant.SubscriptionPlan ?? "-")</dd>
                    <dt class="col-sm-5">@Localizer["Expires"]</dt>
                    <dd class="col-sm-7">@(Model.Tenant.SubscriptionEndDate?.ToString("dd MMM yyyy") ?? "-")</dd>
                    <dt class="col-sm-5">@Localizer["Contact"]</dt>
                    <dd class="col-sm-7">@(Model.Tenant.ContactEmail ?? "-")</dd>
                    <dt class="col-sm-5">@Localizer["Phone"]</dt>
                    <dd class="col-sm-7">@(Model.Tenant.ContactPhone ?? "-")</dd>
                </dl>
            </div>
        </div>

        <div class="card card-rounded mt-3">
            <div class="card-body">
                <h5 class="card-title mb-3">@Localizer["Limits"]</h5>
                <dl class="row mb-0">
                    <dt class="col-sm-7">@Localizer["MaxCompanies"]</dt>
                    <dd class="col-sm-5 text-end">@Model.Statistics.CompanyCount / @Model.Tenant.MaxCompanies</dd>
                    <dt class="col-sm-7">@Localizer["MaxBranchesPerCompany"]</dt>
                    <dd class="col-sm-5 text-end">@Model.Tenant.MaxBranchesPerCompany</dd>
                    <dt class="col-sm-7">@Localizer["MaxUsers"]</dt>
                    <dd class="col-sm-5 text-end">@Model.Statistics.UserCount / @Model.Tenant.MaxUsersPerTenant</dd>
                </dl>
            </div>
        </div>

        <div class="card card-rounded mt-3">
            <div class="card-body">
                <h5 class="card-title mb-3">@Localizer["QuickActions"]</h5>
                <div class="d-grid gap-2">
                    <a asp-action="CreateCompany" asp-route-tenantId="@Model.Tenant.Id" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-plus-circle me-1"></i>@Localizer["AddCompany"]
                    </a>
                    <a asp-action="Users" asp-route-tenantId="@Model.Tenant.Id" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-people me-1"></i>@Localizer["ViewUsers"]
                    </a>
                    <a asp-action="Settings" asp-route-tenantId="@Model.Tenant.Id" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-gear me-1"></i>@Localizer["Settings"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">@Localizer["Companies"]</h5>
                    <a asp-action="Companies" asp-route-tenantId="@Model.Tenant.Id" class="btn btn-sm btn-outline-primary">
                        @Localizer["ViewAll"]
                    </a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover table-xenon align-middle">
                        <thead>
                            <tr>
                                <th>@Localizer["Name"]</th>
                                <th>@Localizer["Code"]</th>
                                <th>@Localizer["City"]</th>
                                <th class="text-center">@Localizer["Branches"]</th>
                                <th class="text-center">@Localizer["Users"]</th>
                                <th>@Localizer["Status"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var company in Model.Companies)
                            {
                                <tr>
                                    <td class="fw-semibold">@company.Name</td>
                                    <td><code>@company.Code</code></td>
                                    <td>@(company.City ?? "-")</td>
                                    <td class="text-center">@company.BranchCount</td>
                                    <td class="text-center">@company.UserCount</td>
                                    <td>
                                        @if (company.IsActive)
                                        {
                                            <span class="badge bg-success">@Localizer["Active"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Localizer["Inactive"]</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
