@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.Admin.TenantListViewModel
@{
    ViewData["Title"] = Localizer["Tenants"];
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-2">
    <h4 class="mb-0">@Localizer["Tenants"]</h4>
    <div class="d-flex gap-2">
        <a asp-action="CreateTenant" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>@Localizer["CreateTenant"]
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card card-rounded">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="showInactive" @(Model.IncludeInactive ? "checked" : "")
                       onchange="location.href='@Url.Action("Tenants")?includeInactive=' + this.checked">
                <label class="form-check-label" for="showInactive">@Localizer["ShowInactive"]</label>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-xenon align-middle">
                <thead>
                    <tr>
                        <th>@Localizer["Name"]</th>
                        <th>@Localizer["Code"]</th>
                        <th>@Localizer["Contact"]</th>
                        <th class="text-center">@Localizer["Companies"]</th>
                        <th class="text-center">@Localizer["Branches"]</th>
                        <th class="text-center">@Localizer["Users"]</th>
                        <th>@Localizer["Plan"]</th>
                        <th>@Localizer["Status"]</th>
                        <th>@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tenant in Model.Tenants)
                    {
                        <tr class="@(!tenant.IsActive ? "table-secondary" : "")">
                            <td>
                                <a asp-action="TenantDetails" asp-route-id="@tenant.Id" class="text-decoration-none fw-semibold">
                                    @tenant.Name
                                </a>
                            </td>
                            <td><code>@tenant.Code</code></td>
                            <td>@(tenant.ContactEmail ?? "-")</td>
                            <td class="text-center">@tenant.CompanyCount</td>
                            <td class="text-center">@tenant.BranchCount</td>
                            <td class="text-center">@tenant.UserCount</td>
                            <td>@(tenant.SubscriptionPlan ?? "-")</td>
                            <td>
                                @if (tenant.IsActive)
                                {
                                    <span class="badge bg-success">@Localizer["Active"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Localizer["Inactive"]</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditTenant" asp-route-id="@tenant.Id" class="btn btn-outline-primary" title="@Localizer["Edit"]">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Settings" asp-route-tenantId="@tenant.Id" class="btn btn-outline-secondary" title="@Localizer["Settings"]">
                                        <i class="bi bi-gear"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
