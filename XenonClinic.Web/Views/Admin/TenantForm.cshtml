@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.Admin.TenantFormViewModel
@{
    ViewData["Title"] = Model.IsEdit ? Localizer["EditTenant"] : Localizer["CreateTenant"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">@ViewData["Title"]</h4>
    <a asp-action="Tenants" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>@Localizer["BackToList"]
    </a>
</div>

<div class="card card-rounded">
    <div class="card-body">
        <form asp-action="@(Model.IsEdit ? "EditTenant" : "CreateTenant")" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">@Localizer["Name"] *</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Code" class="form-label">@Localizer["Code"] *</label>
                    <input asp-for="Code" class="form-control" required />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 mt-2">
                <div class="col-12">
                    <label asp-for="Description" class="form-label">@Localizer["Description"]</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>
            </div>

            <h6 class="mt-4 mb-3 border-bottom pb-2">@Localizer["ContactInformation"]</h6>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="ContactEmail" class="form-label">@Localizer["Email"]</label>
                    <input asp-for="ContactEmail" type="email" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="ContactPhone" class="form-label">@Localizer["Phone"]</label>
                    <input asp-for="ContactPhone" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="Address" class="form-label">@Localizer["Address"]</label>
                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                </div>
            </div>

            <h6 class="mt-4 mb-3 border-bottom pb-2">@Localizer["Branding"]</h6>
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="PrimaryColor" class="form-label">@Localizer["PrimaryColor"]</label>
                    <input asp-for="PrimaryColor" type="color" class="form-control form-control-color w-100" />
                </div>
                <div class="col-md-4">
                    <label asp-for="SecondaryColor" class="form-label">@Localizer["SecondaryColor"]</label>
                    <input asp-for="SecondaryColor" type="color" class="form-control form-control-color w-100" />
                </div>
                <div class="col-md-4">
                    <label asp-for="LogoPath" class="form-label">@Localizer["LogoPath"]</label>
                    <input asp-for="LogoPath" class="form-control" />
                </div>
            </div>

            <h6 class="mt-4 mb-3 border-bottom pb-2">@Localizer["Subscription"]</h6>
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="SubscriptionPlan" class="form-label">@Localizer["Plan"]</label>
                    <select asp-for="SubscriptionPlan" class="form-select">
                        <option value="">@Localizer["SelectPlan"]</option>
                        <option value="Starter">Starter</option>
                        <option value="Professional">Professional</option>
                        <option value="Enterprise">Enterprise</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label asp-for="SubscriptionStartDate" class="form-label">@Localizer["StartDate"]</label>
                    <input asp-for="SubscriptionStartDate" type="date" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="SubscriptionEndDate" class="form-label">@Localizer["EndDate"]</label>
                    <input asp-for="SubscriptionEndDate" type="date" class="form-control" />
                </div>
            </div>

            <h6 class="mt-4 mb-3 border-bottom pb-2">@Localizer["Limits"]</h6>
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="MaxCompanies" class="form-label">@Localizer["MaxCompanies"]</label>
                    <input asp-for="MaxCompanies" type="number" class="form-control" min="1" />
                </div>
                <div class="col-md-4">
                    <label asp-for="MaxBranchesPerCompany" class="form-label">@Localizer["MaxBranchesPerCompany"]</label>
                    <input asp-for="MaxBranchesPerCompany" type="number" class="form-control" min="1" />
                </div>
                <div class="col-md-4">
                    <label asp-for="MaxUsersPerTenant" class="form-label">@Localizer["MaxUsers"]</label>
                    <input asp-for="MaxUsersPerTenant" type="number" class="form-control" min="1" />
                </div>
            </div>

            <div class="row g-3 mt-3">
                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label">@Localizer["Active"]</label>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>@Localizer["Save"]
                </button>
                <a asp-action="Tenants" class="btn btn-outline-secondary">@Localizer["Cancel"]</a>
            </div>
        </form>
    </div>
</div>
