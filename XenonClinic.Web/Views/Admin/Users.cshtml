@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.Admin.UserListViewModel
@{
    ViewData["Title"] = Localizer["Users"];
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-2">
    <h4 class="mb-0">@Localizer["Users"]</h4>
    <div class="d-flex gap-2">
        <a asp-action="CreateUser" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>@Localizer["CreateUser"]
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card card-rounded">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="showInactive" @(Model.IncludeInactive ? "checked" : "")
                       onchange="location.href='@Url.Action("Users", new { tenantId = Model.TenantId, companyId = Model.CompanyId, branchId = Model.BranchId })?includeInactive=' + this.checked">
                <label class="form-check-label" for="showInactive">@Localizer["ShowInactive"]</label>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-xenon align-middle">
                <thead>
                    <tr>
                        <th>@Localizer["User"]</th>
                        <th>@Localizer["Tenant"]</th>
                        <th>@Localizer["Company"]</th>
                        <th>@Localizer["PrimaryBranch"]</th>
                        <th>@Localizer["Roles"]</th>
                        <th>@Localizer["Status"]</th>
                        <th>@Localizer["LastLogin"]</th>
                        <th>@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr class="@(!user.IsActive ? "table-secondary" : "")">
                            <td>
                                <div class="fw-semibold">@(user.DisplayName ?? user.Email)</div>
                                <small class="text-muted">@user.Email</small>
                            </td>
                            <td>@(user.TenantName ?? "-")</td>
                            <td>@(user.CompanyName ?? "-")</td>
                            <td>@(user.PrimaryBranchName ?? "-")</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    <span class="badge bg-secondary me-1">@role</span>
                                }
                            </td>
                            <td>
                                @if (user.IsSuperAdmin)
                                {
                                    <span class="badge bg-danger">SuperAdmin</span>
                                }
                                else if (user.IsActive)
                                {
                                    <span class="badge bg-success">@Localizer["Active"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Localizer["Inactive"]</span>
                                }
                            </td>
                            <td>
                                @if (user.LastLoginAt.HasValue)
                                {
                                    @user.LastLoginAt.Value.ToString("dd MMM yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">@Localizer["Never"]</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-outline-primary" title="@Localizer["Edit"]">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
