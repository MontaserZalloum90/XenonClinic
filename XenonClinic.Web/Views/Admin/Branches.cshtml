@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.Admin.BranchListViewModel
@{
    ViewData["Title"] = Localizer["Branches"];
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-2">
    <div>
        <h4 class="mb-0">@Localizer["Branches"]</h4>
        @if (!string.IsNullOrEmpty(Model.CompanyName))
        {
            <small class="text-muted">@Localizer["Company"]: @Model.CompanyName</small>
        }
    </div>
    <div class="d-flex gap-2">
        <a asp-action="CreateBranch" asp-route-companyId="@Model.CompanyId" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>@Localizer["CreateBranch"]
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card card-rounded">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="showInactive" @(Model.IncludeInactive ? "checked" : "")
                       onchange="location.href='@Url.Action("Branches", new { companyId = Model.CompanyId })?includeInactive=' + this.checked">
                <label class="form-check-label" for="showInactive">@Localizer["ShowInactive"]</label>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-xenon align-middle">
                <thead>
                    <tr>
                        <th>@Localizer["Name"]</th>
                        <th>@Localizer["Code"]</th>
                        <th>@Localizer["Company"]</th>
                        <th>@Localizer["City"]</th>
                        <th>@Localizer["Phone"]</th>
                        <th class="text-center">@Localizer["Users"]</th>
                        <th>@Localizer["Main"]</th>
                        <th>@Localizer["Status"]</th>
                        <th>@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var branch in Model.Branches)
                    {
                        <tr class="@(!branch.IsActive ? "table-secondary" : "")">
                            <td class="fw-semibold">@branch.Name</td>
                            <td><code>@branch.Code</code></td>
                            <td>@branch.CompanyName</td>
                            <td>@(branch.City ?? "-")</td>
                            <td>@(branch.Phone ?? "-")</td>
                            <td class="text-center">@branch.UserCount</td>
                            <td>
                                @if (branch.IsMainBranch)
                                {
                                    <span class="badge bg-primary">@Localizer["Main"]</span>
                                }
                            </td>
                            <td>
                                @if (branch.IsActive)
                                {
                                    <span class="badge bg-success">@Localizer["Active"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Localizer["Inactive"]</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditBranch" asp-route-id="@branch.Id" class="btn btn-outline-primary" title="@Localizer["Edit"]">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Users" asp-route-branchId="@branch.Id" class="btn btn-outline-secondary" title="@Localizer["Users"]">
                                        <i class="bi bi-people"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
