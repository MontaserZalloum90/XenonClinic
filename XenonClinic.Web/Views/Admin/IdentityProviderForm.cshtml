@using Microsoft.AspNetCore.Mvc.Localization
@using XenonClinic.Core.Entities
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.Admin.Auth.IdentityProviderFormViewModel
@{
    ViewData["Title"] = Model.IsEdit ? Localizer["EditIdentityProvider"] : Localizer["CreateIdentityProvider"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">@ViewData["Title"]</h4>
        <small class="text-muted">@Model.CompanyName</small>
    </div>
    <a asp-action="AuthSettings" asp-route-companyId="@Model.CompanyId" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>@Localizer["BackToAuthSettings"]
    </a>
</div>

<form asp-action="SaveIdentityProvider" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CompanyId" />

    <div class="row">
        <div class="col-lg-8">
            <!-- Basic Information -->
            <div class="card card-rounded mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>@Localizer["BasicInformation"]</h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label">@Localizer["InternalName"] *</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., ADFS-OIDC" required />
                            <small class="text-muted">@Localizer["InternalNameHelp"]</small>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DisplayName" class="form-label">@Localizer["DisplayName"] *</label>
                            <input asp-for="DisplayName" class="form-control" placeholder="e.g., Sign in with Corporate SSO" required />
                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="Type" class="form-label">@Localizer["ProviderType"] *</label>
                            <select asp-for="Type" class="form-select" id="providerType" asp-items="Html.GetEnumSelectList<IdentityProviderType>()"></select>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="DisplayOrder" class="form-label">@Localizer["DisplayOrder"]</label>
                            <input asp-for="DisplayOrder" type="number" class="form-control" />
                        </div>
                        <div class="col-md-3 d-flex align-items-end gap-3">
                            <div class="form-check">
                                <input asp-for="IsEnabled" class="form-check-input" type="checkbox" />
                                <label asp-for="IsEnabled" class="form-check-label">@Localizer["Enabled"]</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="IsDefault" class="form-check-input" type="checkbox" />
                                <label asp-for="IsDefault" class="form-check-label">@Localizer["Default"]</label>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="IconClass" class="form-label">@Localizer["IconClass"]</label>
                            <input asp-for="IconClass" class="form-control" placeholder="bi bi-microsoft" />
                            <small class="text-muted">@Localizer["IconClassHelp"]</small>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ButtonClass" class="form-label">@Localizer["ButtonClass"]</label>
                            <input asp-for="ButtonClass" class="form-control" placeholder="btn-outline-primary" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- OIDC Configuration -->
            <div class="card card-rounded mb-4" id="oidcSection">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-shield-check me-2"></i>@Localizer["OIDCConfiguration"]</h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="OidcAuthority" class="form-label">@Localizer["AuthorityURL"] *</label>
                            <input asp-for="OidcAuthority" class="form-control" placeholder="https://login.microsoftonline.com/{tenant}/v2.0" />
                            <small class="text-muted">@Localizer["AuthorityURLHelp"]</small>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="OidcClientId" class="form-label">@Localizer["ClientID"] *</label>
                            <input asp-for="OidcClientId" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="OidcClientSecret" class="form-label">
                                @Localizer["ClientSecret"]
                                @if (Model.IsEdit)
                                {
                                    <small class="text-muted">(@Localizer["LeaveBlankToKeep"])</small>
                                }
                            </label>
                            <input asp-for="OidcClientSecret" type="password" class="form-control" autocomplete="new-password" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-4">
                            <label asp-for="OidcResponseType" class="form-label">@Localizer["ResponseType"]</label>
                            <input asp-for="OidcResponseType" class="form-control" />
                        </div>
                        <div class="col-md-8">
                            <label asp-for="OidcScopes" class="form-label">@Localizer["Scopes"]</label>
                            <input asp-for="OidcScopes" class="form-control" placeholder="openid,profile,email" />
                            <small class="text-muted">@Localizer["ScopesHelp"]</small>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="OidcCallbackPath" class="form-label">@Localizer["CallbackPath"]</label>
                            <input asp-for="OidcCallbackPath" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="OidcSignedOutCallbackPath" class="form-label">@Localizer["SignedOutCallbackPath"]</label>
                            <input asp-for="OidcSignedOutCallbackPath" class="form-control" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-4">
                            <div class="form-check">
                                <input asp-for="OidcUsePkce" class="form-check-input" type="checkbox" />
                                <label asp-for="OidcUsePkce" class="form-check-label">@Localizer["UsePKCE"]</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check">
                                <input asp-for="OidcRequireHttpsMetadata" class="form-check-input" type="checkbox" />
                                <label asp-for="OidcRequireHttpsMetadata" class="form-check-label">@Localizer["RequireHTTPS"]</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check">
                                <input asp-for="OidcGetClaimsFromUserInfoEndpoint" class="form-check-input" type="checkbox" />
                                <label asp-for="OidcGetClaimsFromUserInfoEndpoint" class="form-check-label">@Localizer["GetUserInfoClaims"]</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- SAML 2.0 Configuration -->
            <div class="card card-rounded mb-4" id="samlSection" style="display: none;">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-file-earmark-lock me-2"></i>@Localizer["SAML2Configuration"]</h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="SamlEntityId" class="form-label">@Localizer["SPEntityID"]</label>
                            <input asp-for="SamlEntityId" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="SamlIdpEntityId" class="form-label">@Localizer["IdPEntityID"]</label>
                            <input asp-for="SamlIdpEntityId" class="form-control" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-12">
                            <label asp-for="SamlMetadataUrl" class="form-label">@Localizer["IdPMetadataURL"]</label>
                            <input asp-for="SamlMetadataUrl" class="form-control" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="SamlAcsPath" class="form-label">@Localizer["ACSPath"]</label>
                            <input asp-for="SamlAcsPath" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="SamlSloPath" class="form-label">@Localizer["SLOPath"]</label>
                            <input asp-for="SamlSloPath" class="form-control" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-4">
                            <label asp-for="SamlAllowedClockSkewMinutes" class="form-label">@Localizer["ClockSkewMinutes"]</label>
                            <input asp-for="SamlAllowedClockSkewMinutes" type="number" class="form-control" />
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <div class="form-check">
                                <input asp-for="SamlSignAuthnRequests" class="form-check-input" type="checkbox" />
                                <label asp-for="SamlSignAuthnRequests" class="form-check-label">@Localizer["SignRequests"]</label>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <div class="form-check">
                                <input asp-for="SamlWantAssertionsSigned" class="form-check-input" type="checkbox" />
                                <label asp-for="SamlWantAssertionsSigned" class="form-check-label">@Localizer["WantAssertionsSigned"]</label>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-12">
                            <label asp-for="SamlSpCertificate" class="form-label">@Localizer["SPCertificate"]</label>
                            <textarea asp-for="SamlSpCertificate" class="form-control" rows="3" placeholder="Base64 encoded certificate"></textarea>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="SamlSpCertificatePassword" class="form-label">
                                @Localizer["CertificatePassword"]
                                @if (Model.IsEdit)
                                {
                                    <small class="text-muted">(@Localizer["LeaveBlankToKeep"])</small>
                                }
                            </label>
                            <input asp-for="SamlSpCertificatePassword" type="password" class="form-control" autocomplete="new-password" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- WS-Federation Configuration -->
            <div class="card card-rounded mb-4" id="wsfedSection" style="display: none;">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-globe me-2"></i>@Localizer["WSFedConfiguration"]</h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="WsFedMetadataAddress" class="form-label">@Localizer["MetadataAddress"]</label>
                            <input asp-for="WsFedMetadataAddress" class="form-control" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="WsFedWtrealm" class="form-label">@Localizer["Wtrealm"]</label>
                            <input asp-for="WsFedWtrealm" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="WsFedReplyUrl" class="form-label">@Localizer["ReplyURL"]</label>
                            <input asp-for="WsFedReplyUrl" class="form-control" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-4">
                            <div class="form-check">
                                <input asp-for="WsFedRequireHttps" class="form-check-input" type="checkbox" />
                                <label asp-for="WsFedRequireHttps" class="form-check-label">@Localizer["RequireHTTPS"]</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Claim Mappings -->
            <div class="card card-rounded mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-diagram-3 me-2"></i>@Localizer["ClaimMappings"]</h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="ClaimMappingEmail" class="form-label">@Localizer["EmailClaimType"]</label>
                            <input asp-for="ClaimMappingEmail" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ClaimMappingUpn" class="form-label">@Localizer["UPNClaimType"]</label>
                            <input asp-for="ClaimMappingUpn" class="form-control" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-4">
                            <label asp-for="ClaimMappingName" class="form-label">@Localizer["NameClaimType"]</label>
                            <input asp-for="ClaimMappingName" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="ClaimMappingFirstName" class="form-label">@Localizer["FirstNameClaimType"]</label>
                            <input asp-for="ClaimMappingFirstName" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="ClaimMappingLastName" class="form-label">@Localizer["LastNameClaimType"]</label>
                            <input asp-for="ClaimMappingLastName" class="form-control" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="ClaimMappingGroups" class="form-label">@Localizer["GroupsClaimType"]</label>
                            <input asp-for="ClaimMappingGroups" class="form-control" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-12">
                            <label asp-for="ExtraConfigJson" class="form-label">@Localizer["ExtraConfigJSON"]</label>
                            <textarea asp-for="ExtraConfigJson" class="form-control font-monospace" rows="3" placeholder="{}"></textarea>
                            <small class="text-muted">@Localizer["ExtraConfigJSONHelp"]</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>@Localizer["Save"]
                </button>
                <a asp-action="AuthSettings" asp-route-companyId="@Model.CompanyId" class="btn btn-outline-secondary">@Localizer["Cancel"]</a>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card card-rounded">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-lightbulb me-2"></i>@Localizer["Help"]</h6>
                </div>
                <div class="card-body">
                    <div id="helpOidc">
                        <h6>@Localizer["OIDCHelp"]</h6>
                        <p class="small text-muted">@Localizer["OIDCHelpText"]</p>
                        <ul class="small text-muted">
                            <li>Azure AD: <code>https://login.microsoftonline.com/{tenant}/v2.0</code></li>
                            <li>ADFS: <code>https://adfs.company.com/adfs</code></li>
                            <li>Okta: <code>https://{domain}.okta.com</code></li>
                        </ul>
                    </div>
                    <div id="helpSaml" style="display: none;">
                        <h6>@Localizer["SAML2Help"]</h6>
                        <p class="small text-muted">@Localizer["SAML2HelpText"]</p>
                    </div>
                    <div id="helpWsfed" style="display: none;">
                        <h6>@Localizer["WSFedHelp"]</h6>
                        <p class="small text-muted">@Localizer["WSFedHelpText"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function updateProviderSections() {
            const type = document.getElementById('providerType').value;
            const oidcSection = document.getElementById('oidcSection');
            const samlSection = document.getElementById('samlSection');
            const wsfedSection = document.getElementById('wsfedSection');
            const helpOidc = document.getElementById('helpOidc');
            const helpSaml = document.getElementById('helpSaml');
            const helpWsfed = document.getElementById('helpWsfed');

            // Hide all sections
            oidcSection.style.display = 'none';
            samlSection.style.display = 'none';
            wsfedSection.style.display = 'none';
            helpOidc.style.display = 'none';
            helpSaml.style.display = 'none';
            helpWsfed.style.display = 'none';

            // Show relevant section
            switch (type) {
                case '0': // OIDC
                    oidcSection.style.display = 'block';
                    helpOidc.style.display = 'block';
                    break;
                case '1': // SAML2
                    samlSection.style.display = 'block';
                    helpSaml.style.display = 'block';
                    break;
                case '2': // WSFED
                    wsfedSection.style.display = 'block';
                    helpWsfed.style.display = 'block';
                    break;
            }
        }

        document.getElementById('providerType')?.addEventListener('change', updateProviderSections);
        updateProviderSections();
    </script>
}
