@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.Admin.AdminDashboardViewModel
@{
    ViewData["Title"] = Localizer["AdminDashboard"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">@Localizer["AdminDashboard"]</h4>
</div>

@if (Model.IsSuperAdmin && Model.Statistics != null)
{
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card card-rounded bg-primary text-white">
                <div class="card-body">
                    <div class="small opacity-75">@Localizer["TotalTenants"]</div>
                    <div class="fs-3 fw-bold">@Model.Statistics.TotalTenants</div>
                    <div class="small">@Model.Statistics.ActiveTenants @Localizer["Active"]</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card card-rounded bg-success text-white">
                <div class="card-body">
                    <div class="small opacity-75">@Localizer["TotalCompanies"]</div>
                    <div class="fs-3 fw-bold">@Model.Statistics.TotalCompanies</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card card-rounded bg-info text-white">
                <div class="card-body">
                    <div class="small opacity-75">@Localizer["TotalBranches"]</div>
                    <div class="fs-3 fw-bold">@Model.Statistics.TotalBranches</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card card-rounded bg-warning text-dark">
                <div class="card-body">
                    <div class="small opacity-75">@Localizer["TotalUsers"]</div>
                    <div class="fs-3 fw-bold">@Model.Statistics.TotalUsers</div>
                    <div class="small">@Model.Statistics.ActiveUsers @Localizer["Active"]</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-8">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">@Localizer["RecentTenants"]</h5>
                        <a asp-action="Tenants" class="btn btn-sm btn-primary">@Localizer["ViewAll"]</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover table-xenon align-middle">
                            <thead>
                                <tr>
                                    <th>@Localizer["Name"]</th>
                                    <th>@Localizer["Code"]</th>
                                    <th>@Localizer["Companies"]</th>
                                    <th>@Localizer["Status"]</th>
                                    <th>@Localizer["Subscription"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tenant in Model.RecentTenants)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="TenantDetails" asp-route-id="@tenant.Id" class="text-decoration-none">
                                                @tenant.Name
                                            </a>
                                        </td>
                                        <td><code>@tenant.Code</code></td>
                                        <td>@tenant.CompanyCount</td>
                                        <td>
                                            @if (tenant.IsActive)
                                            {
                                                <span class="badge bg-success">@Localizer["Active"]</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@Localizer["Inactive"]</span>
                                            }
                                        </td>
                                        <td>
                                            @if (tenant.SubscriptionEndDate.HasValue)
                                            {
                                                @tenant.SubscriptionEndDate.Value.ToString("dd MMM yyyy")
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card card-rounded mb-3">
                <div class="card-body">
                    <h5 class="mb-3">@Localizer["QuickActions"]</h5>
                    <div class="d-grid gap-2">
                        <a asp-action="CreateTenant" class="btn btn-outline-primary">
                            <i class="bi bi-plus-circle me-2"></i>@Localizer["CreateTenant"]
                        </a>
                        <a asp-action="Companies" class="btn btn-outline-primary">
                            <i class="bi bi-building me-2"></i>@Localizer["ManageCompanies"]
                        </a>
                        <a asp-action="Users" class="btn btn-outline-primary">
                            <i class="bi bi-people me-2"></i>@Localizer["ManageUsers"]
                        </a>
                    </div>
                </div>
            </div>
            <div class="card card-rounded">
                <div class="card-body">
                    <h5 class="mb-3">@Localizer["Configuration"]</h5>
                    <div class="d-grid gap-2">
                        <a asp-action="CommunicationSettings" class="btn btn-outline-secondary">
                            <i class="bi bi-envelope me-2"></i>@Localizer["CommunicationSettings"]
                        </a>
                        <a asp-action="TenantTheme" class="btn btn-outline-secondary">
                            <i class="bi bi-palette me-2"></i>@Localizer["ThemeColors"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (Model.CurrentTenantStats != null)
{
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="text-muted small">@Localizer["Companies"]</div>
                    <div class="fs-3 fw-bold text-primary">@Model.CurrentTenantStats.CompanyCount</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="text-muted small">@Localizer["Branches"]</div>
                    <div class="fs-3 fw-bold text-success">@Model.CurrentTenantStats.BranchCount</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="text-muted small">@Localizer["Users"]</div>
                    <div class="fs-3 fw-bold text-info">@Model.CurrentTenantStats.UserCount</div>
                    <div class="small text-muted">@Model.CurrentTenantStats.ActiveUserCount @Localizer["Active"]</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="text-muted small">@Localizer["Patients"]</div>
                    <div class="fs-3 fw-bold text-warning">@Model.CurrentTenantStats.PatientCount</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-6">
            <div class="card card-rounded">
                <div class="card-body">
                    <h5 class="mb-3">@Localizer["ManageOrganization"]</h5>
                    <div class="d-grid gap-2">
                        <a asp-action="Companies" class="btn btn-outline-primary">
                            <i class="bi bi-building me-2"></i>@Localizer["ManageCompanies"]
                        </a>
                        <a asp-action="Branches" class="btn btn-outline-primary">
                            <i class="bi bi-geo-alt me-2"></i>@Localizer["ManageBranches"]
                        </a>
                        <a asp-action="Users" class="btn btn-outline-primary">
                            <i class="bi bi-people me-2"></i>@Localizer["ManageUsers"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card card-rounded">
                <div class="card-body">
                    <h5 class="mb-3">@Localizer["Configuration"]</h5>
                    <div class="d-grid gap-2">
                        <a asp-action="Settings" class="btn btn-outline-secondary">
                            <i class="bi bi-gear me-2"></i>@Localizer["TenantSettings"]
                        </a>
                        <a asp-action="CommunicationSettings" class="btn btn-outline-secondary">
                            <i class="bi bi-envelope me-2"></i>@Localizer["CommunicationSettings"]
                        </a>
                        <a asp-action="TenantTheme" class="btn btn-outline-secondary">
                            <i class="bi bi-palette me-2"></i>@Localizer["ThemeColors"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
