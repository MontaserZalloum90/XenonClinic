@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.Admin.CompanyListViewModel
@{
    ViewData["Title"] = Localizer["Companies"];
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-2">
    <div>
        <h4 class="mb-0">@Localizer["Companies"]</h4>
        @if (!string.IsNullOrEmpty(Model.TenantName))
        {
            <small class="text-muted">@Localizer["Tenant"]: @Model.TenantName</small>
        }
    </div>
    <div class="d-flex gap-2">
        <a asp-action="CreateCompany" asp-route-tenantId="@Model.TenantId" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>@Localizer["CreateCompany"]
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card card-rounded">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="showInactive" @(Model.IncludeInactive ? "checked" : "")
                       onchange="location.href='@Url.Action("Companies", new { tenantId = Model.TenantId })?includeInactive=' + this.checked">
                <label class="form-check-label" for="showInactive">@Localizer["ShowInactive"]</label>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-xenon align-middle">
                <thead>
                    <tr>
                        <th>@Localizer["Name"]</th>
                        <th>@Localizer["Code"]</th>
                        <th>@Localizer["Tenant"]</th>
                        <th>@Localizer["City"]</th>
                        <th class="text-center">@Localizer["Branches"]</th>
                        <th class="text-center">@Localizer["Users"]</th>
                        <th>@Localizer["Status"]</th>
                        <th>@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in Model.Companies)
                    {
                        <tr class="@(!company.IsActive ? "table-secondary" : "")">
                            <td class="fw-semibold">@company.Name</td>
                            <td><code>@company.Code</code></td>
                            <td>@company.TenantName</td>
                            <td>@(company.City ?? "-")</td>
                            <td class="text-center">@company.BranchCount</td>
                            <td class="text-center">@company.UserCount</td>
                            <td>
                                @if (company.IsActive)
                                {
                                    <span class="badge bg-success">@Localizer["Active"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Localizer["Inactive"]</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditCompany" asp-route-id="@company.Id" class="btn btn-outline-primary" title="@Localizer["Edit"]">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Branches" asp-route-companyId="@company.Id" class="btn btn-outline-secondary" title="@Localizer["Branches"]">
                                        <i class="bi bi-geo-alt"></i>
                                    </a>
                                    <a asp-action="CompanyTheme" asp-route-companyId="@company.Id" class="btn btn-outline-info" title="@Localizer["ThemeColors"]">
                                        <i class="bi bi-palette"></i>
                                    </a>
                                    <a asp-action="CompanyCommunicationSettings" asp-route-companyId="@company.Id" class="btn btn-outline-success" title="@Localizer["CommunicationSettings"]">
                                        <i class="bi bi-envelope"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
