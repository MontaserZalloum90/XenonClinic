@model IEnumerable<XenonClinic.Web.Models.LabOrderDto>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Lab_Orders"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Lab_Orders"]</h2>
        <div>
            <a asp-action="CreateOrder" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @Localizer["New_Lab_Order"]
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> @Localizer["Back_to_Dashboard"]
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">@Localizer["Status"]</label>
                    <select name="status" class="form-select">
                        <option value="">@Localizer["All_Statuses"]</option>
                        @foreach (var status in Enum.GetValues<XenonClinic.Core.Enums.LabOrderStatus>())
                        {
                            <option value="@status">@Localizer[$"LabOrderStatus_{status}"]</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["From_Date"]</label>
                    <input type="date" name="fromDate" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["To_Date"]</label>
                    <input type="date" name="toDate" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div class="form-check">
                        <input type="checkbox" name="urgentOnly" value="true" class="form-check-input" id="urgentCheck" />
                        <label class="form-check-label" for="urgentCheck">@Localizer["Urgent_Only"]</label>
                    </div>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> @Localizer["Search"]
                    </button>
                    <a asp-action="Orders" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> @Localizer["Clear"]
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Order_Number"]</th>
                                <th>@Localizer["Date"]</th>
                                <th>@Localizer["Patient"]</th>
                                <th>@Localizer["Tests"]</th>
                                <th>@Localizer["Amount"]</th>
                                <th>@Localizer["Status"]</th>
                                <th>@Localizer["Progress"]</th>
                                <th>@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr class="@(order.IsUrgent ? "table-warning" : "")">
                                    <td>
                                        <strong>@order.OrderNumber</strong>
                                        @if (order.IsUrgent)
                                        {
                                            <span class="badge bg-warning text-dark ms-1">@Localizer["Urgent"]</span>
                                        }
                                    </td>
                                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                    <td>@order.PatientName</td>
                                    <td>@order.TestCount</td>
                                    <td>@order.TotalAmount.ToString("N2") AED</td>
                                    <td>
                                        @{
                                            var statusClass = order.Status switch
                                            {
                                                XenonClinic.Core.Enums.LabOrderStatus.Pending => "secondary",
                                                XenonClinic.Core.Enums.LabOrderStatus.Collected => "info",
                                                XenonClinic.Core.Enums.LabOrderStatus.InProgress => "warning",
                                                XenonClinic.Core.Enums.LabOrderStatus.Completed => "success",
                                                XenonClinic.Core.Enums.LabOrderStatus.Cancelled => "danger",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@Localizer[$"LabOrderStatus_{order.Status}"]</span>
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar @(order.CompletedTests == order.TestCount ? "bg-success" : "bg-info")"
                                                 role="progressbar"
                                                 style="width: @((order.TestCount > 0 ? (order.CompletedTests * 100 / order.TestCount) : 0))%">
                                                @order.CompletedTests/@order.TestCount
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-info" title="@Localizer["Details"]">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (order.Status == XenonClinic.Core.Enums.LabOrderStatus.Pending)
                                        {
                                            <form asp-action="CollectSpecimen" asp-route-id="@order.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-primary" title="@Localizer["Collect_Specimen"]">
                                                    <i class="bi bi-droplet"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-clipboard-x fs-1 d-block mb-3 text-muted"></i>
                    <h5 class="text-muted">@Localizer["No_Lab_Orders_Found"]</h5>
                </div>
            }
        </div>
    </div>
</div>
