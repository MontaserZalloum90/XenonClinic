@model IEnumerable<XenonClinic.Web.Models.LabTestDto>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Lab_Tests"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Lab_Tests_Catalog"]</h2>
        <div>
            <a asp-action="CreateTest" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @Localizer["Add_Test"]
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> @Localizer["Back_to_Dashboard"]
            </a>
        </div>
    </div>

    <!-- Tests Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Test_Code"]</th>
                                <th>@Localizer["Test_Name"]</th>
                                <th>@Localizer["Category"]</th>
                                <th>@Localizer["Specimen"]</th>
                                <th>@Localizer["TAT"]</th>
                                <th>@Localizer["Price"]</th>
                                <th>@Localizer["External_Lab"]</th>
                                <th>@Localizer["Status"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var test in Model)
                            {
                                <tr>
                                    <td><strong>@test.TestCode</strong></td>
                                    <td>
                                        @test.TestName
                                        @if (test.RequiresFasting)
                                        {
                                            <span class="badge bg-warning text-dark ms-1">@Localizer["Fasting"]</span>
                                        }
                                    </td>
                                    <td>@Localizer[$"TestCategory_{test.Category}"]</td>
                                    <td>
                                        @if (test.SpecimenType.HasValue)
                                        {
                                            @Localizer[$"SpecimenType_{test.SpecimenType}"]
                                        }
                                    </td>
                                    <td>
                                        @if (test.TurnaroundTimeHours.HasValue)
                                        {
                                            <span>@test.TurnaroundTimeHours @Localizer["Hours"]</span>
                                        }
                                    </td>
                                    <td>@test.Price.ToString("N2") AED</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(test.ExternalLabName))
                                        {
                                            <span class="badge bg-info">@test.ExternalLabName</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@Localizer["In_House"]</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@(test.IsActive ? "success" : "secondary")">
                                            @Localizer[test.IsActive ? "Active" : "Inactive"]
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-clipboard-data fs-1 d-block mb-3 text-muted"></i>
                    <h5 class="text-muted">@Localizer["No_Lab_Tests_Found"]</h5>
                </div>
            }
        </div>
    </div>
</div>
