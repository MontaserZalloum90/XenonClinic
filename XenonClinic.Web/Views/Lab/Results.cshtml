@model IEnumerable<XenonClinic.Web.Models.LabResultDto>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Lab_Results"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Lab_Results"]</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> @Localizer["Back_to_Dashboard"]
        </a>
    </div>

    <!-- Results Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Order"]</th>
                                <th>@Localizer["Test"]</th>
                                <th>@Localizer["Result"]</th>
                                <th>@Localizer["Reference_Range"]</th>
                                <th>@Localizer["Status"]</th>
                                <th>@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in Model)
                            {
                                <tr class="@(result.IsAbnormal ? "table-danger" : "")">
                                    <td>@result.OrderNumber</td>
                                    <td>
                                        @result.TestName
                                        @if (result.IsAbnormal)
                                        {
                                            <span class="badge bg-danger ms-1">@Localizer["Abnormal"]</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(result.ResultValue))
                                        {
                                            <strong>@result.ResultValue @result.Unit</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">@Localizer["Pending"]</span>
                                        }
                                    </td>
                                    <td>@result.ReferenceRange</td>
                                    <td>
                                        @{
                                            var statusClass = result.Status switch
                                            {
                                                XenonClinic.Core.Enums.LabResultStatus.Pending => "secondary",
                                                XenonClinic.Core.Enums.LabResultStatus.InProgress => "warning",
                                                XenonClinic.Core.Enums.LabResultStatus.Completed => "success",
                                                XenonClinic.Core.Enums.LabResultStatus.Reviewed => "info",
                                                XenonClinic.Core.Enums.LabResultStatus.Verified => "primary",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@Localizer[$"LabResultStatus_{result.Status}"]</span>
                                    </td>
                                    <td>
                                        @if (result.Status == XenonClinic.Core.Enums.LabResultStatus.Pending || result.Status == XenonClinic.Core.Enums.LabResultStatus.InProgress)
                                        {
                                            <a asp-action="EnterResult" asp-route-id="@result.Id" class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil"></i> @Localizer["Enter"]
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-clipboard-check fs-1 d-block mb-3 text-muted"></i>
                    <h5 class="text-muted">@Localizer["No_Lab_Results_Found"]</h5>
                </div>
            }
        </div>
    </div>
</div>
