@model XenonClinic.Web.Models.LabDashboardViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Laboratory"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Lab_Dashboard"]</h2>
    </div>

    <!-- Metrics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted">@Localizer["Pending_Orders"]</h6>
                            <h3 class="mb-0">@Model.PendingOrders</h3>
                        </div>
                        <i class="bi bi-clock-history fs-1 text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted">@Localizer["Urgent_Orders"]</h6>
                            <h3 class="mb-0">@Model.UrgentOrders</h3>
                        </div>
                        <i class="bi bi-exclamation-triangle fs-1 text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted">@Localizer["Pending_Results"]</h6>
                            <h3 class="mb-0">@Model.PendingResults</h3>
                        </div>
                        <i class="bi bi-hourglass-split fs-1 text-info"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted">@Localizer["Abnormal_Results"]</h6>
                            <h3 class="mb-0">@Model.AbnormalResults</h3>
                        </div>
                        <i class="bi bi-exclamation-circle fs-1 text-danger"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">@Localizer["Total_Lab_Orders"]</h6>
                    <h4>@Model.TotalOrders</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">@Localizer["Completed_Today"]</h6>
                    <h4>@Model.CompletedOrdersToday</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">@Localizer["Active_Tests"]</h6>
                    <h4>@Model.ActiveTests</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6>@Localizer["Quick_Actions"]</h6>
                    <div class="d-grid gap-2">
                        <a asp-action="CreateOrder" class="btn btn-light btn-sm">
                            <i class="bi bi-plus-circle"></i> @Localizer["New_Lab_Order"]
                        </a>
                        <a asp-action="Results" class="btn btn-light btn-sm">
                            <i class="bi bi-clipboard-check"></i> @Localizer["Enter_Results"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Recent Orders -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Localizer["Recent_Lab_Orders"]</h5>
                    <a asp-action="Orders" class="btn btn-sm btn-outline-primary">@Localizer["View_All"]</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>@Localizer["Order_Number"]</th>
                                        <th>@Localizer["Patient"]</th>
                                        <th>@Localizer["Tests"]</th>
                                        <th>@Localizer["Status"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr class="@(order.IsUrgent ? "table-warning" : "")">
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>@order.PatientName</td>
                                            <td>@order.TestCount</td>
                                            <td>
                                                @{
                                                    var statusClass = order.Status switch
                                                    {
                                                        XenonClinic.Core.Enums.LabOrderStatus.Pending => "secondary",
                                                        XenonClinic.Core.Enums.LabOrderStatus.Collected => "info",
                                                        XenonClinic.Core.Enums.LabOrderStatus.InProgress => "warning",
                                                        XenonClinic.Core.Enums.LabOrderStatus.Completed => "success",
                                                        XenonClinic.Core.Enums.LabOrderStatus.Cancelled => "danger",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@Localizer[$"LabOrderStatus_{order.Status}"]</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">@Localizer["No_Recent_Lab_Orders"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Pending Results -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Localizer["Pending_Lab_Results"]</h5>
                    <a asp-action="Results" class="btn btn-sm btn-outline-primary">@Localizer["View_All"]</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.PendingResults.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>@Localizer["Order"]</th>
                                        <th>@Localizer["Test"]</th>
                                        <th>@Localizer["Status"]</th>
                                        <th>@Localizer["Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in Model.PendingResults)
                                    {
                                        <tr>
                                            <td>@result.OrderNumber</td>
                                            <td>@result.TestName</td>
                                            <td>
                                                @{
                                                    var statusClass = result.Status switch
                                                    {
                                                        XenonClinic.Core.Enums.LabResultStatus.Pending => "secondary",
                                                        XenonClinic.Core.Enums.LabResultStatus.InProgress => "warning",
                                                        XenonClinic.Core.Enums.LabResultStatus.Completed => "success",
                                                        XenonClinic.Core.Enums.LabResultStatus.Reviewed => "info",
                                                        XenonClinic.Core.Enums.LabResultStatus.Verified => "primary",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@Localizer[$"LabResultStatus_{result.Status}"]</span>
                                            </td>
                                            <td>
                                                <a asp-action="EnterResult" asp-route-id="@result.Id" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">@Localizer["No_Pending_Results"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
