@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.Admin.ModuleListViewModel
@{
    ViewData["Title"] = "Module Management";
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-2">
    <h4 class="mb-0"><i class="bi bi-puzzle me-2"></i>Module Management</h4>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Module Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                            <i class="bi bi-puzzle fs-4 text-primary"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Modules</h6>
                        <h3 class="mb-0">@Model.TotalModules</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3">
                            <i class="bi bi-check-circle fs-4 text-success"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Enabled</h6>
                        <h3 class="mb-0">@Model.EnabledModules</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="rounded-circle bg-secondary bg-opacity-10 p-3">
                            <i class="bi bi-x-circle fs-4 text-secondary"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Disabled</h6>
                        <h3 class="mb-0">@Model.DisabledModules</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Module List -->
<div class="card card-rounded">
    <div class="card-body">
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Note:</strong> Modules are configured in <code>appsettings.json</code>. Changes to module status require an application restart.
        </div>

        <div class="row g-3">
            @foreach (var module in Model.Modules)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 @(module.IsEnabled ? "border-primary" : "border-secondary") border-2">
                        <div class="card-header @(module.IsEnabled ? "bg-primary text-white" : "bg-secondary text-white")">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">
                                    @if (!string.IsNullOrEmpty(module.IconClass))
                                    {
                                        <i class="@module.IconClass me-2"></i>
                                    }
                                    @module.DisplayName
                                </h6>
                                @if (module.IsEnabled)
                                {
                                    <span class="badge bg-light text-primary">
                                        <i class="bi bi-check-circle me-1"></i>Enabled
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-secondary">
                                        <i class="bi bi-x-circle me-1"></i>Disabled
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-2">
                                <span class="badge bg-info">@module.Category</span>
                                <span class="badge bg-secondary">v@module.Version</span>
                                @if (module.IsRequired)
                                {
                                    <span class="badge bg-danger">Required</span>
                                }
                            </div>
                            <p class="card-text small text-muted mb-3">@module.Description</p>

                            @if (module.Dependencies != null && module.Dependencies.Length > 0)
                            {
                                <div class="mb-3">
                                    <small class="text-muted d-block mb-1"><strong>Dependencies:</strong></small>
                                    @foreach (var dep in module.Dependencies)
                                    {
                                        <span class="badge bg-warning text-dark me-1">@dep</span>
                                    }
                                </div>
                            }

                            <!-- License Information -->
                            <div class="border-top pt-3 mt-3">
                                @if (module.IsLicenseValid)
                                {
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-key text-success me-2"></i>
                                        <small class="text-muted">Licensed</small>
                                    </div>
                                    @if (module.LicenseExpiryDate.HasValue)
                                    {
                                        <div class="small">
                                            @if (module.IsLicenseExpired)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-exclamation-triangle me-1"></i>License Expired
                                                </span>
                                            }
                                            else if (module.DaysUntilExpiry.HasValue && module.DaysUntilExpiry < 30)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-clock me-1"></i>Expires in @module.DaysUntilExpiry days
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">Expires: @module.LicenseExpiryDate.Value.ToString("MMM dd, yyyy")</span>
                                            }
                                        </div>
                                    }
                                    @if (module.MaxUsers.HasValue && module.MaxUsers > 0)
                                    {
                                        <div class="small text-muted mt-1">
                                            <i class="bi bi-people me-1"></i>Max Users: @module.MaxUsers
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-key text-warning me-2"></i>
                                        <small class="text-warning">No License</small>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="Details" asp-route-moduleName="@module.Name" class="btn btn-sm btn-outline-primary w-100">
                                <i class="bi bi-info-circle me-1"></i>View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
