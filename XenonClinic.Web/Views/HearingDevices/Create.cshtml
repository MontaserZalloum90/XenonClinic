@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.CreateHearingDeviceViewModel

@{
    ViewData["Title"] = Localizer["AddHearingDevice"];
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@Localizer["Home"]</a></li>
        <li class="breadcrumb-item"><a asp-controller="HearingDevices" asp-action="Index">@Localizer["HearingDevices"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["AddDevice"]</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">@Localizer["AddHearingDevice"]</h3>
</div>

<form asp-action="Create" method="post" class="card card-rounded p-3 p-md-4">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row g-3">
        <!-- Patient Selection -->
        <div class="col-md-6 col-12">
            <label asp-for="PatientId" class="form-label">
                @Localizer["Patient"] <span class="text-danger">*</span>
            </label>
            <select asp-for="PatientId" asp-items="ViewBag.Patients" class="form-select">
                <option value="">@Localizer["SelectPatient"]</option>
            </select>
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>

        <!-- Active Status -->
        <div class="col-md-6 col-12 d-flex align-items-end">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label">
                    @Localizer["DeviceIsActive"]
                </label>
            </div>
        </div>

        <!-- Model Name -->
        <div class="col-md-6 col-12">
            <label asp-for="ModelName" class="form-label">
                @Localizer["ModelName"] <span class="text-danger">*</span>
            </label>
            <input asp-for="ModelName" class="form-control" placeholder="@Localizer["EnterModelName"]" />
            <span asp-validation-for="ModelName" class="text-danger"></span>
            <div class="form-text">@Localizer["ExamplePhonakAudeoP90"]</div>
        </div>

        <!-- Serial Number -->
        <div class="col-md-6 col-12">
            <label asp-for="SerialNumber" class="form-label">
                @Localizer["SerialNumber"] <span class="text-danger">*</span>
            </label>
            <input asp-for="SerialNumber" class="form-control" placeholder="@Localizer["EnterSerialNumber"]" />
            <span asp-validation-for="SerialNumber" class="text-danger"></span>
        </div>

        <!-- Purchase Date -->
        <div class="col-md-6 col-12">
            <label asp-for="PurchaseDate" class="form-label">
                @Localizer["PurchaseDate"] <span class="text-danger">*</span>
            </label>
            <input asp-for="PurchaseDate" class="form-control" type="date" />
            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
        </div>

        <!-- Warranty Expiry Date -->
        <div class="col-md-6 col-12">
            <label asp-for="WarrantyExpiryDate" class="form-label">
                @Localizer["WarrantyExpiryDate"]
            </label>
            <input asp-for="WarrantyExpiryDate" class="form-control" type="date" />
            <span asp-validation-for="WarrantyExpiryDate" class="text-danger"></span>
            <div class="form-text">@Localizer["OptionalWarrantyEndDate"]</div>
        </div>

        <!-- Notes -->
        <div class="col-12">
            <label asp-for="Notes" class="form-label">@Localizer["Notes"]</label>
            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="@Localizer["EnterDeviceNotes"]"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
    </div>

    <!-- Information Box -->
    <div class="alert alert-info mt-3">
        <h6 class="alert-heading"><i class="bi bi-info-circle"></i> @Localizer["DeviceInformation"]</h6>
        <ul class="mb-0 ps-3">
            <li>@Localizer["RecordDetailsOfHearingDevice"]</li>
            <li>@Localizer["TrackWarrantyExpiryDates"]</li>
            <li>@Localizer["MarkInactiveWhenDeviceNoLongerInUse"]</li>
        </ul>
    </div>

    <!-- Form Buttons -->
    <div class="mt-4 d-flex flex-column flex-sm-row justify-content-end gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-lg"></i> @Localizer["Cancel"]
        </a>
        <button type="submit" class="btn btn-xenon">
            <i class="bi bi-check-lg"></i> @Localizer["AddDevice"]
        </button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
