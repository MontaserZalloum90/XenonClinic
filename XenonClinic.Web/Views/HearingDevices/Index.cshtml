@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IStringLocalizer<XenonClinic.Web.Resources.SharedResource> SharedLocalizer

@{
    ViewData["Title"] = Localizer["HearingDevices"];
    var devices = ViewBag.Devices as List<dynamic> ?? new List<dynamic>();
    var activeOnly = ViewBag.ActiveOnly as bool? ?? true;
    var pageNumber = ViewBag.PageNumber as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-3 gap-2">
    <div>
        <h2 class="mb-0">@Localizer["HearingDevices"]</h2>
        <p class="text-muted">@totalCount @Localizer["TotalDevices"]</p>
    </div>
    <div>
        <a class="btn btn-xenon" asp-action="Create">
            <i class="bi bi-plus-lg"></i> @Localizer["AddDevice"]
        </a>
    </div>
</div>

<!-- Filter Form -->
<form method="get" class="mb-3">
    <div class="card card-rounded p-3">
        <div class="row g-3 align-items-end">
            <div class="col-md-8">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="activeOnly" id="activeOnly" value="true" @(activeOnly ? "checked" : "")>
                    <label class="form-check-label" for="activeOnly">
                        @Localizer["ShowActiveDevicesOnly"]
                    </label>
                </div>
            </div>
            <div class="col-md-4 d-flex gap-2 justify-content-end">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-funnel"></i> @Localizer["Filter"]
                </button>
                <a class="btn btn-outline-secondary" asp-action="Index">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
        </div>
    </div>
</form>

<div class="card card-rounded">
    @if (devices.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Localizer["Patient"]</th>
                        <th class="d-none d-md-table-cell">@Localizer["EmiratesID"]</th>
                        <th>@Localizer["ModelName"]</th>
                        <th class="d-none d-lg-table-cell">@Localizer["SerialNumber"]</th>
                        <th class="d-none d-lg-table-cell">@Localizer["PurchaseDate"]</th>
                        <th>@Localizer["Status"]</th>
                        <th class="text-end">@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var device in devices)
                    {
                        var isWarrantyExpired = device.WarrantyExpiryDate != null && device.WarrantyExpiryDate < DateTime.Now;
                        var isWarrantyExpiringSoon = device.WarrantyExpiryDate != null &&
                                                     device.WarrantyExpiryDate >= DateTime.Now &&
                                                     device.WarrantyExpiryDate <= DateTime.Now.AddMonths(3);

                        <tr class="@(!device.IsActive ? "table-secondary" : "")">
                            <td>
                                <a asp-controller="Patients" asp-action="Details" asp-route-id="@device.PatientId" class="text-decoration-none">
                                    @device.PatientName
                                </a>
                            </td>
                            <td class="d-none d-md-table-cell">@device.PatientEmiratesId</td>
                            <td>
                                <strong>@device.ModelName</strong>
                            </td>
                            <td class="d-none d-lg-table-cell">
                                <small class="text-muted">@device.SerialNumber</small>
                            </td>
                            <td class="d-none d-lg-table-cell">
                                @device.PurchaseDate.ToString("dd MMM yyyy")
                            </td>
                            <td>
                                @if (device.IsActive)
                                {
                                    if (isWarrantyExpired)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-exclamation-triangle"></i> @Localizer["WarrantyExpired"]
                                        </span>
                                    }
                                    else if (isWarrantyExpiringSoon)
                                    {
                                        <span class="badge bg-warning">
                                            <i class="bi bi-exclamation-circle"></i> @Localizer["WarrantyExpiringSoon"]
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@Localizer["Active"]</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Localizer["Inactive"]</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@device.Id" class="btn btn-outline-primary" title="@Localizer["View"]">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@device.Id" class="btn btn-outline-secondary" title="@Localizer["Edit"]">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (totalPages > 1)
        {
            <div class="card-footer bg-white">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0 justify-content-center flex-wrap">
                        <li class="page-item @(pageNumber > 1 ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber - 1)" asp-route-activeOnly="@activeOnly">
                                @Localizer["Previous"]
                            </a>
                        </li>
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == pageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-activeOnly="@activeOnly">@i</a>
                            </li>
                        }
                        <li class="page-item @(pageNumber < totalPages ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber + 1)" asp-route-activeOnly="@activeOnly">
                                @Localizer["Next"]
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="text-center mt-2 small text-muted">
                    @Localizer["Page"] @pageNumber @Localizer["Of"] @totalPages (@Localizer["Showing"] @devices.Count @Localizer["Of"] @totalCount @Localizer["Devices"].Value.ToLower())
                </div>
            </div>
        }
    }
    else
    {
        <div class="card-body text-center py-5">
            <i class="bi bi-ear display-1 text-muted"></i>
            <p class="text-muted mt-3">@Localizer["NoDevicesFound"]</p>
            <a class="btn btn-primary mt-2" asp-action="Create">
                <i class="bi bi-plus-lg"></i> @Localizer["AddFirstDevice"]
            </a>
        </div>
    }
</div>
