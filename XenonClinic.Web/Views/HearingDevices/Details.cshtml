@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Core.Entities.HearingDevice

@{
    ViewData["Title"] = Localizer["HearingDeviceDetails"];
    var isWarrantyExpired = Model.WarrantyExpiryDate != null && Model.WarrantyExpiryDate < DateTime.Now;
    var isWarrantyExpiringSoon = Model.WarrantyExpiryDate != null &&
                                 Model.WarrantyExpiryDate >= DateTime.Now &&
                                 Model.WarrantyExpiryDate <= DateTime.Now.AddMonths(3);
    var warrantyDaysRemaining = Model.WarrantyExpiryDate != null ? (Model.WarrantyExpiryDate.Value - DateTime.Now).Days : 0;
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@Localizer["Home"]</a></li>
        <li class="breadcrumb-item"><a asp-controller="HearingDevices" asp-action="Index">@Localizer["HearingDevices"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["Details"]</li>
    </ol>
</nav>

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h3 class="mb-1">@Localizer["HearingDeviceDetails"]</h3>
        <p class="text-muted mb-0">
            @Localizer["DeviceID"]: #@Model.Id
        </p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> @Localizer["Edit"]
        </a>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            <i class="bi bi-trash"></i> @Localizer["Delete"]
        </button>
    </div>
</div>

<!-- Status Alert -->
@if (!Model.IsActive)
{
    <div class="alert alert-secondary d-flex align-items-center mb-4">
        <i class="bi bi-x-circle me-2"></i>
        <strong>@Localizer["DeviceInactive"]</strong>
    </div>
}
else if (isWarrantyExpired)
{
    <div class="alert alert-danger d-flex align-items-center mb-4">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>@Localizer["WarrantyExpiredOn"]</strong>&nbsp;@Model.WarrantyExpiryDate.Value.ToString("dd MMMM yyyy")
    </div>
}
else if (isWarrantyExpiringSoon)
{
    <div class="alert alert-warning d-flex align-items-center mb-4">
        <i class="bi bi-exclamation-circle me-2"></i>
        <strong>@Localizer["WarrantyExpiring"]:</strong>&nbsp;@warrantyDaysRemaining @Localizer["DaysRemaining"] (@Model.WarrantyExpiryDate.Value.ToString("dd MMM yyyy"))
    </div>
}

<!-- Device Information -->
<div class="row g-4">
    <!-- Left Column - Device Info -->
    <div class="col-lg-6">
        <div class="card card-rounded h-100">
            <div class="card-header bg-white">
                <h5 class="mb-0">@Localizer["DeviceInformation"]</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-12">
                        <label class="text-muted small fw-bold">@Localizer["ModelName"]</label>
                        <p class="mb-0 fs-5">
                            <i class="bi bi-ear-fill text-primary"></i>
                            @Model.ModelName
                        </p>
                    </div>

                    <div class="col-12">
                        <label class="text-muted small fw-bold">@Localizer["SerialNumber"]</label>
                        <p class="mb-0">
                            <i class="bi bi-upc-scan text-primary"></i>
                            <code class="bg-light p-1 rounded">@Model.SerialNumber</code>
                        </p>
                    </div>

                    <div class="col-6">
                        <label class="text-muted small fw-bold">@Localizer["PurchaseDate"]</label>
                        <p class="mb-0">
                            <i class="bi bi-calendar-check text-primary"></i>
                            @Model.PurchaseDate.ToString("dd MMM yyyy")
                        </p>
                    </div>

                    <div class="col-6">
                        <label class="text-muted small fw-bold">@Localizer["Status"]</label>
                        <p class="mb-0">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> @Localizer["Active"]</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> @Localizer["Inactive"]</span>
                            }
                        </p>
                    </div>

                    @if (Model.WarrantyExpiryDate != null)
                    {
                        <div class="col-12">
                            <label class="text-muted small fw-bold">@Localizer["WarrantyExpiryDate"]</label>
                            <p class="mb-0">
                                <i class="bi bi-shield-check text-primary"></i>
                                @Model.WarrantyExpiryDate.Value.ToString("dd MMM yyyy")
                                @if (isWarrantyExpired)
                                {
                                    <span class="badge bg-danger ms-2">@Localizer["Expired"]</span>
                                }
                                else if (isWarrantyExpiringSoon)
                                {
                                    <span class="badge bg-warning ms-2">@warrantyDaysRemaining @Localizer["DaysLeft"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-success ms-2">@Localizer["Valid"]</span>
                                }
                            </p>
                        </div>
                    }

                    <div class="col-12">
                        <label class="text-muted small fw-bold">@Localizer["Branch"]</label>
                        <p class="mb-0">
                            <i class="bi bi-building text-primary"></i>
                            @(Model.Branch?.Name ?? "Unknown")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column - Patient Info -->
    <div class="col-lg-6">
        <div class="card card-rounded h-100">
            <div class="card-header bg-white">
                <h5 class="mb-0">@Localizer["PatientInformation"]</h5>
            </div>
            <div class="card-body">
                @if (Model.Patient != null)
                {
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="text-muted small fw-bold">@Localizer["PatientName"]</label>
                            <p class="mb-0">
                                <a asp-controller="Patients" asp-action="Details" asp-route-id="@Model.Patient.Id" class="text-decoration-none fs-5">
                                    <i class="bi bi-person-circle text-primary"></i>
                                    @Model.Patient.FullNameEn
                                </a>
                            </p>
                        </div>

                        <div class="col-12">
                            <label class="text-muted small fw-bold">@Localizer["EmiratesID"]</label>
                            <p class="mb-0">
                                <i class="bi bi-credit-card text-primary"></i>
                                @Model.Patient.EmiratesId
                            </p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Patient.PhoneNumber))
                        {
                            <div class="col-12">
                                <label class="text-muted small fw-bold">@Localizer["Phone"]</label>
                                <p class="mb-0">
                                    <i class="bi bi-telephone text-primary"></i>
                                    <a href="tel:@Model.Patient.PhoneNumber">@Model.Patient.PhoneNumber</a>
                                </p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Patient.Email))
                        {
                            <div class="col-12">
                                <label class="text-muted small fw-bold">@Localizer["Email"]</label>
                                <p class="mb-0">
                                    <i class="bi bi-envelope text-primary"></i>
                                    <a href="mailto:@Model.Patient.Email">@Model.Patient.Email</a>
                                </p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">@Localizer["PatientInformationNotAvailable"]</p>
                }
            </div>
        </div>
    </div>

    <!-- Notes Section -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="col-12">
            <div class="card card-rounded">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-sticky text-warning"></i> @Localizer["Notes"]</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0 white-space-pre-line">@Model.Notes</p>
                </div>
            </div>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">@Localizer["ConfirmDeletion"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@Localizer["AreYouSureDeleteDevice"]</p>
                <div class="alert alert-warning mb-0">
                    <i class="bi bi-exclamation-triangle"></i> @Localizer["ThisActionCannotBeUndone"]
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">@Localizer["YesDeleteIt"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .white-space-pre-line {
        white-space: pre-line;
    }
</style>
