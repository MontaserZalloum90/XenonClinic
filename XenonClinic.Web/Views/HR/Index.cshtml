@model XenonClinic.Web.Models.HRDashboardViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["HR_Dashboard"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["HR_Dashboard"]</h2>
        <div>
            <a asp-action="CreateEmployee" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> @Localizer["Add_Employee"]
            </a>
            <a asp-action="CreateLeaveRequest" class="btn btn-success">
                <i class="bi bi-calendar-plus"></i> @Localizer["New_Leave_Request"]
            </a>
        </div>
    </div>

    <!-- Metrics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">@Localizer["Total_Employees"]</h6>
                            <h2 class="mb-0">@Model.TotalEmployees</h2>
                        </div>
                        <i class="bi bi-people fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">@Localizer["Active_Employees"]</h6>
                            <h2 class="mb-0">@Model.ActiveEmployees</h2>
                        </div>
                        <i class="bi bi-person-check fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">@Localizer["Present_Today"]</h6>
                            <h2 class="mb-0">@Model.PresentToday</h2>
                        </div>
                        <i class="bi bi-calendar-check fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">@Localizer["On_Leave_Today"]</h6>
                            <h2 class="mb-0">@Model.OnLeaveToday</h2>
                        </div>
                        <i class="bi bi-calendar-x fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Leave Requests Badge -->
    @if (Model.PendingLeaveRequests > 0)
    {
        <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
            <div>
                <strong>@Localizer["Pending_Approvals"]:</strong>
                @string.Format(Localizer["Pending_Leave_Count"].Value, Model.PendingLeaveRequests)
                <a asp-action="LeaveRequests" asp-route-status="Pending" class="alert-link ms-2">@Localizer["View_All"]</a>
            </div>
        </div>
    }

    <div class="row">
        <!-- Recent Hires -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Localizer["Recent_Hires"]</h5>
                    <a asp-action="Employees" class="btn btn-sm btn-outline-primary">@Localizer["View_All"]</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentHires.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Employee_Code"]</th>
                                        <th>@Localizer["Name"]</th>
                                        <th>@Localizer["Department"]</th>
                                        <th>@Localizer["Position"]</th>
                                        <th>@Localizer["Hire_Date"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model.RecentHires)
                                    {
                                        <tr>
                                            <td><strong>@employee.EmployeeCode</strong></td>
                                            <td>@employee.FullName</td>
                                            <td>@employee.DepartmentName</td>
                                            <td>@employee.JobPositionTitle</td>
                                            <td>@employee.HireDate.ToString("yyyy-MM-dd")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            @Localizer["No_Recent_Hires"]
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Pending Leave Requests -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Localizer["Pending_Leave_Requests"]</h5>
                    <a asp-action="LeaveRequests" asp-route-status="Pending" class="btn btn-sm btn-outline-primary">@Localizer["View_All"]</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.PendingLeaves.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Employee"]</th>
                                        <th>@Localizer["Leave_Type"]</th>
                                        <th>@Localizer["Duration"]</th>
                                        <th>@Localizer["Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var leave in Model.PendingLeaves)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@leave.EmployeeName</strong>
                                                <small class="d-block text-muted">@leave.EmployeeCode</small>
                                            </td>
                                            <td>@Localizer[$"LeaveType_{leave.LeaveType}"]</td>
                                            <td>
                                                @leave.StartDate.ToString("yyyy-MM-dd") - @leave.EndDate.ToString("yyyy-MM-dd")
                                                <small class="d-block text-muted">@leave.TotalDays @Localizer["Days"]</small>
                                            </td>
                                            <td>
                                                <form asp-action="ApproveLeave" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@leave.Id" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="@Localizer["Approve"]">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                </form>
                                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal@(leave.Id)" title="@Localizer["Reject"]">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            </td>
                                        </tr>

                                        <!-- Reject Modal -->
                                        <div class="modal fade" id="rejectModal@(leave.Id)" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <form asp-action="RejectLeave" method="post">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">@Localizer["Reject_Leave_Request"]</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <input type="hidden" name="id" value="@leave.Id" />
                                                            <div class="mb-3">
                                                                <label class="form-label">@Localizer["Rejection_Reason"]</label>
                                                                <textarea name="reason" class="form-control" rows="3" required></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                                                            <button type="submit" class="btn btn-danger">@Localizer["Reject"]</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            @Localizer["No_Pending_Requests"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Today's Attendance -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Localizer["Todays_Attendance"]</h5>
                    <span class="badge bg-secondary">@DateTime.UtcNow.ToString("yyyy-MM-dd")</span>
                </div>
                <div class="card-body p-0">
                    @if (Model.TodayAttendance.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Employee_Code"]</th>
                                        <th>@Localizer["Employee_Name"]</th>
                                        <th>@Localizer["Check_In"]</th>
                                        <th>@Localizer["Check_Out"]</th>
                                        <th>@Localizer["Status"]</th>
                                        <th>@Localizer["Late_Minutes"]</th>
                                        <th>@Localizer["Worked_Hours"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var attendance in Model.TodayAttendance)
                                    {
                                        <tr>
                                            <td><strong>@attendance.EmployeeCode</strong></td>
                                            <td>@attendance.EmployeeName</td>
                                            <td>@(attendance.CheckInTime?.ToString("HH:mm") ?? "-")</td>
                                            <td>@(attendance.CheckOutTime?.ToString("HH:mm") ?? "-")</td>
                                            <td>
                                                @{
                                                    var statusClass = attendance.Status switch
                                                    {
                                                        XenonClinic.Core.Enums.AttendanceStatus.Present => "success",
                                                        XenonClinic.Core.Enums.AttendanceStatus.Late => "warning",
                                                        XenonClinic.Core.Enums.AttendanceStatus.Absent => "danger",
                                                        XenonClinic.Core.Enums.AttendanceStatus.HalfDay => "info",
                                                        XenonClinic.Core.Enums.AttendanceStatus.OnLeave => "secondary",
                                                        XenonClinic.Core.Enums.AttendanceStatus.Holiday => "primary",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@Localizer[$"AttendanceStatus_{attendance.Status}"]</span>
                                            </td>
                                            <td>
                                                @if (attendance.LateMinutes > 0)
                                                {
                                                    <span class="text-danger">@attendance.LateMinutes @Localizer["Minutes"]</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@(attendance.WorkedHours?.ToString("F2") ?? "-") @Localizer["Hours"]</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            @Localizer["No_Attendance_Records"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
