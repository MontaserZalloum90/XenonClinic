@model XenonClinic.Web.Models.CreateEmployeeViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Add_Employee"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Add_Employee"]</h2>
        <a asp-action="Employees" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> @Localizer["Back_to_List"]
        </a>
    </div>

    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form asp-action="CreateEmployee" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <!-- Personal Information -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">@Localizer["Personal_Information"]</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="FirstName" class="form-label">@Localizer["First_Name"] <span class="text-danger">*</span></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label">@Localizer["Last_Name"] <span class="text-danger">*</span></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="DateOfBirth" class="form-label">@Localizer["Date_of_Birth"] <span class="text-danger">*</span></label>
                                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="EmiratesId" class="form-label">@Localizer["Emirates_ID"]</label>
                                    <input asp-for="EmiratesId" class="form-control" placeholder="784-XXXX-XXXXXXX-X" />
                                    <span asp-validation-for="EmiratesId" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Nationality" class="form-label">@Localizer["Nationality"]</label>
                                    <input asp-for="Nationality" class="form-control" />
                                    <span asp-validation-for="Nationality" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Information -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">@Localizer["Contact_Information"]</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                                    <input asp-for="Email" type="email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Phone" class="form-label">@Localizer["Phone"] <span class="text-danger">*</span></label>
                                    <input asp-for="Phone" type="tel" class="form-control" placeholder="+971XXXXXXXXX" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Address" class="form-label">@Localizer["Address"]</label>
                                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Employment Details -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">@Localizer["Employment_Details"]</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="EmployeeCode" class="form-label">@Localizer["Employee_Code"] <span class="text-danger">*</span></label>
                                    <input asp-for="EmployeeCode" class="form-control" placeholder="EMP001" />
                                    <span asp-validation-for="EmployeeCode" class="text-danger"></span>
                                    <small class="form-text text-muted">@Localizer["Employee_Code_Help"]</small>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="HireDate" class="form-label">@Localizer["Hire_Date"] <span class="text-danger">*</span></label>
                                    <input asp-for="HireDate" type="date" class="form-control" />
                                    <span asp-validation-for="HireDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="DepartmentId" class="form-label">@Localizer["Department"] <span class="text-danger">*</span></label>
                                    <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                                        <option value="">@Localizer["Select_Department"]</option>
                                    </select>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="JobPositionId" class="form-label">@Localizer["Position"] <span class="text-danger">*</span></label>
                                    <select asp-for="JobPositionId" class="form-select" asp-items="ViewBag.JobPositions">
                                        <option value="">@Localizer["Select_Position"]</option>
                                    </select>
                                    <span asp-validation-for="JobPositionId" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Status" class="form-label">@Localizer["Employment_Status"] <span class="text-danger">*</span></label>
                                    <select asp-for="Status" class="form-select">
                                        @foreach (var status in Enum.GetValues<XenonClinic.Core.Enums.EmploymentStatus>())
                                        {
                                            <option value="@status">@Localizer[$"EmploymentStatus_{status}"]</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="WorkStartTime" class="form-label">@Localizer["Work_Start_Time"]</label>
                                    <input asp-for="WorkStartTime" type="time" class="form-control" />
                                    <span asp-validation-for="WorkStartTime" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="WorkEndTime" class="form-label">@Localizer["Work_End_Time"]</label>
                                    <input asp-for="WorkEndTime" type="time" class="form-control" />
                                    <span asp-validation-for="WorkEndTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Compensation -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">@Localizer["Compensation"]</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="BasicSalary" class="form-label">@Localizer["Basic_Salary"] (AED) <span class="text-danger">*</span></label>
                                    <input asp-for="BasicSalary" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="BasicSalary" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="HousingAllowance" class="form-label">@Localizer["Housing_Allowance"] (AED)</label>
                                    <input asp-for="HousingAllowance" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="HousingAllowance" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="TransportAllowance" class="form-label">@Localizer["Transport_Allowance"] (AED)</label>
                                    <input asp-for="TransportAllowance" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="TransportAllowance" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="OtherAllowances" class="form-label">@Localizer["Other_Allowances"] (AED)</label>
                                    <input asp-for="OtherAllowances" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="OtherAllowances" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Employees" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> @Localizer["Save"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Set today's date as max for date of birth
        document.getElementById('@Html.IdFor(m => m.DateOfBirth)').max = new Date().toISOString().split('T')[0];

        // Set today's date as default for hire date
        document.getElementById('@Html.IdFor(m => m.HireDate)').value = new Date().toISOString().split('T')[0];

        // Calculate total salary in real-time
        const basicSalary = document.getElementById('@Html.IdFor(m => m.BasicSalary)');
        const housingAllowance = document.getElementById('@Html.IdFor(m => m.HousingAllowance)');
        const transportAllowance = document.getElementById('@Html.IdFor(m => m.TransportAllowance)');
        const otherAllowances = document.getElementById('@Html.IdFor(m => m.OtherAllowances)');

        function calculateTotal() {
            const basic = parseFloat(basicSalary.value) || 0;
            const housing = parseFloat(housingAllowance.value) || 0;
            const transport = parseFloat(transportAllowance.value) || 0;
            const other = parseFloat(otherAllowances.value) || 0;
            const total = basic + housing + transport + other;

            // Display total if there's a dedicated element for it
            const totalElement = document.getElementById('totalSalary');
            if (totalElement) {
                totalElement.textContent = total.toFixed(2) + ' AED';
            }
        }

        basicSalary.addEventListener('input', calculateTotal);
        housingAllowance.addEventListener('input', calculateTotal);
        transportAllowance.addEventListener('input', calculateTotal);
        otherAllowances.addEventListener('input', calculateTotal);
    </script>
}
