@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IStringLocalizer<XenonClinic.Web.Resources.SharedResource> SharedLocalizer

@{
    ViewData["Title"] = Localizer["AudiologyVisits"];
    var visits = ViewBag.Visits as List<dynamic> ?? new List<dynamic>();
    var startDate = ViewBag.StartDate as DateTime?;
    var endDate = ViewBag.EndDate as DateTime?;
    var pageNumber = ViewBag.PageNumber as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-3 gap-2">
    <div>
        <h2 class="mb-0">@Localizer["AudiologyVisits"]</h2>
        <p class="text-muted">@totalCount @Localizer["TotalVisits"]</p>
    </div>
    <div>
        <a class="btn btn-xenon" asp-action="Create">
            <i class="bi bi-plus-lg"></i> @Localizer["NewVisit"]
        </a>
    </div>
</div>

<!-- Filter Form -->
<form method="get" class="mb-3">
    <div class="card card-rounded p-3">
        <div class="row g-3">
            <div class="col-md-5">
                <label for="startDate" class="form-label">@Localizer["StartDate"]</label>
                <input type="date" name="startDate" id="startDate" value="@(startDate?.ToString("yyyy-MM-dd"))" class="form-control" />
            </div>
            <div class="col-md-5">
                <label for="endDate" class="form-label">@Localizer["EndDate"]</label>
                <input type="date" name="endDate" id="endDate" value="@(endDate?.ToString("yyyy-MM-dd"))" class="form-control" />
            </div>
            <div class="col-md-2 d-flex align-items-end gap-2">
                <button class="btn btn-primary flex-grow-1" type="submit">
                    <i class="bi bi-funnel"></i> @Localizer["Filter"]
                </button>
                <a class="btn btn-outline-secondary" asp-action="Index">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
        </div>
    </div>
</form>

<div class="card card-rounded">
    @if (visits.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Localizer["Patient"]</th>
                        <th class="d-none d-md-table-cell">@Localizer["EmiratesID"]</th>
                        <th>@Localizer["VisitDate"]</th>
                        <th class="d-none d-lg-table-cell">@Localizer["ChiefComplaint"]</th>
                        <th class="d-none d-xl-table-cell">@Localizer["Branch"]</th>
                        <th class="text-end">@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var visit in visits)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Patients" asp-action="Details" asp-route-id="@visit.PatientId" class="text-decoration-none">
                                    @visit.PatientName
                                </a>
                            </td>
                            <td class="d-none d-md-table-cell">@visit.PatientEmiratesId</td>
                            <td>
                                @visit.VisitDate.ToString("dd MMM yyyy")
                            </td>
                            <td class="d-none d-lg-table-cell">
                                @if (!string.IsNullOrEmpty(visit.ChiefComplaint))
                                {
                                    <span class="text-truncate d-inline-block" style="max-width: 300px;" title="@visit.ChiefComplaint">
                                        @visit.ChiefComplaint
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">@Localizer["NoComplaint"]</span>
                                }
                            </td>
                            <td class="d-none d-xl-table-cell">@visit.BranchName</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@visit.Id" class="btn btn-outline-primary" title="@Localizer["View"]">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@visit.Id" class="btn btn-outline-secondary" title="@Localizer["Edit"]">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (totalPages > 1)
        {
            <div class="card-footer bg-white">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0 justify-content-center flex-wrap">
                        <li class="page-item @(pageNumber > 1 ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber - 1)" asp-route-startDate="@(startDate?.ToString("yyyy-MM-dd"))" asp-route-endDate="@(endDate?.ToString("yyyy-MM-dd"))">
                                @Localizer["Previous"]
                            </a>
                        </li>
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == pageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-startDate="@(startDate?.ToString("yyyy-MM-dd"))" asp-route-endDate="@(endDate?.ToString("yyyy-MM-dd"))">@i</a>
                            </li>
                        }
                        <li class="page-item @(pageNumber < totalPages ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber + 1)" asp-route-startDate="@(startDate?.ToString("yyyy-MM-dd"))" asp-route-endDate="@(endDate?.ToString("yyyy-MM-dd"))">
                                @Localizer["Next"]
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="text-center mt-2 small text-muted">
                    @Localizer["Page"] @pageNumber @Localizer["Of"] @totalPages (@Localizer["Showing"] @visits.Count @Localizer["Of"] @totalCount @Localizer["Visits"].Value.ToLower())
                </div>
            </div>
        }
    }
    else
    {
        <div class="card-body text-center py-5">
            <i class="bi bi-clipboard2-pulse display-1 text-muted"></i>
            <p class="text-muted mt-3">@Localizer["NoVisitsFound"]</p>
            <a class="btn btn-primary mt-2" asp-action="Create">
                <i class="bi bi-plus-lg"></i> @Localizer["CreateFirstVisit"]
            </a>
        </div>
    }
</div>
