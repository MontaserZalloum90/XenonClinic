@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Core.Entities.AudiologyVisit

@{
    ViewData["Title"] = Localizer["AudiologyVisitDetails"];
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@Localizer["Home"]</a></li>
        <li class="breadcrumb-item"><a asp-controller="AudiologyVisits" asp-action="Index">@Localizer["AudiologyVisits"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["Details"]</li>
    </ol>
</nav>

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h3 class="mb-1">@Localizer["AudiologyVisitDetails"]</h3>
        <p class="text-muted mb-0">
            @Localizer["VisitID"]: #@Model.Id
        </p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> @Localizer["Edit"]
        </a>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            <i class="bi bi-trash"></i> @Localizer["Delete"]
        </button>
    </div>
</div>

<!-- Visit Information -->
<div class="row g-4">
    <!-- Left Column - Visit Info -->
    <div class="col-lg-6">
        <div class="card card-rounded h-100">
            <div class="card-header bg-white">
                <h5 class="mb-0">@Localizer["VisitInformation"]</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-12">
                        <label class="text-muted small fw-bold">@Localizer["VisitDate"]</label>
                        <p class="mb-0">
                            <i class="bi bi-calendar3 text-primary"></i>
                            @Model.VisitDate.ToString("dddd, dd MMMM yyyy")
                        </p>
                    </div>

                    <div class="col-12">
                        <label class="text-muted small fw-bold">@Localizer["Branch"]</label>
                        <p class="mb-0">
                            <i class="bi bi-building text-primary"></i>
                            @(Model.Branch?.Name ?? "Unknown")
                        </p>
                    </div>

                    <div class="col-12">
                        <label class="text-muted small fw-bold">@Localizer["HasAudiogram"]</label>
                        <p class="mb-0">
                            @if (Model.Audiogram != null)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> @Localizer["Yes"]
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle"></i> @Localizer["No"]
                                </span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column - Patient Info -->
    <div class="col-lg-6">
        <div class="card card-rounded h-100">
            <div class="card-header bg-white">
                <h5 class="mb-0">@Localizer["PatientInformation"]</h5>
            </div>
            <div class="card-body">
                @if (Model.Patient != null)
                {
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="text-muted small fw-bold">@Localizer["PatientName"]</label>
                            <p class="mb-0">
                                <a asp-controller="Patients" asp-action="Details" asp-route-id="@Model.Patient.Id" class="text-decoration-none">
                                    <i class="bi bi-person-circle text-primary"></i>
                                    @Model.Patient.FullNameEn
                                </a>
                            </p>
                        </div>

                        <div class="col-12">
                            <label class="text-muted small fw-bold">@Localizer["EmiratesID"]</label>
                            <p class="mb-0">
                                <i class="bi bi-credit-card text-primary"></i>
                                @Model.Patient.EmiratesId
                            </p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Patient.PhoneNumber))
                        {
                            <div class="col-12">
                                <label class="text-muted small fw-bold">@Localizer["Phone"]</label>
                                <p class="mb-0">
                                    <i class="bi bi-telephone text-primary"></i>
                                    <a href="tel:@Model.Patient.PhoneNumber">@Model.Patient.PhoneNumber</a>
                                </p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">@Localizer["PatientInformationNotAvailable"]</p>
                }
            </div>
        </div>
    </div>

    <!-- Chief Complaint Section -->
    @if (!string.IsNullOrEmpty(Model.ChiefComplaint))
    {
        <div class="col-12">
            <div class="card card-rounded">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-chat-left-text text-primary"></i> @Localizer["ChiefComplaint"]</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0 white-space-pre-line">@Model.ChiefComplaint</p>
                </div>
            </div>
        </div>
    }

    <!-- Diagnosis Section -->
    @if (!string.IsNullOrEmpty(Model.Diagnosis))
    {
        <div class="col-12">
            <div class="card card-rounded">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-clipboard2-pulse text-success"></i> @Localizer["Diagnosis"]</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0 white-space-pre-line">@Model.Diagnosis</p>
                </div>
            </div>
        </div>
    }

    <!-- Treatment Plan Section -->
    @if (!string.IsNullOrEmpty(Model.Plan))
    {
        <div class="col-12">
            <div class="card card-rounded">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-prescription2 text-info"></i> @Localizer["TreatmentPlan"]</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0 white-space-pre-line">@Model.Plan</p>
                </div>
            </div>
        </div>
    }

    <!-- Audiogram Section -->
    @if (Model.Audiogram != null)
    {
        <div class="col-12">
            <div class="card card-rounded">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-graph-up text-warning"></i> @Localizer["Audiogram"]</h5>
                    <span class="badge bg-info">@Localizer["AudiogramID"]: #@Model.Audiogram.Id</span>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Audiogram.Notes))
                    {
                        <div class="mb-3">
                            <label class="text-muted small fw-bold">@Localizer["Notes"]</label>
                            <p class="mb-0">@Model.Audiogram.Notes</p>
                        </div>
                    }
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> @Localizer["AudiogramDataAvailable"]
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> @Localizer["NoAudiogramRecordedForThisVisit"]
            </div>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">@Localizer["ConfirmDeletion"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Localizer["AreYouSureDeleteVisit"]
                @if (Model.Audiogram != null)
                {
                    <div class="alert alert-warning mt-3 mb-0">
                        <i class="bi bi-exclamation-triangle"></i> @Localizer["AssociatedAudiogramWillAlsoBeDeleted"]
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">@Localizer["YesDeleteIt"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .white-space-pre-line {
        white-space: pre-line;
    }
</style>
