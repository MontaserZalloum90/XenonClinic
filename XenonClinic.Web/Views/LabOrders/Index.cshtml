@using XenonClinic.Core.Enums
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<XenonClinic.Core.Entities.LabOrder>
@{
    ViewData["Title"] = "Laboratory Orders";
    var statusDistribution = ViewBag.StatusDistribution as Dictionary<LabOrderStatus, int> ?? new Dictionary<LabOrderStatus, int>();
    var currentStatus = ViewBag.CurrentStatus as LabOrderStatus?;
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-2">
    <h4 class="mb-0"><i class="bi bi-microscope me-2"></i>Laboratory Orders</h4>
    <div class="d-flex gap-2">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>New Lab Order
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Status Filter Badges -->
<div class="card card-rounded mb-3">
    <div class="card-body">
        <div class="d-flex flex-wrap gap-2">
            <a asp-action="Index" class="btn @(currentStatus == null ? "btn-primary" : "btn-outline-primary") btn-sm">
                <i class="bi bi-list-ul me-1"></i>All Orders
                <span class="badge bg-light text-dark ms-1">@statusDistribution.Values.Sum()</span>
            </a>
            <a asp-action="Index" asp-route-status="@LabOrderStatus.Pending"
               class="btn @(currentStatus == LabOrderStatus.Pending ? "btn-warning" : "btn-outline-warning") btn-sm">
                <i class="bi bi-hourglass me-1"></i>Pending
                @if (statusDistribution.ContainsKey(LabOrderStatus.Pending))
                {
                    <span class="badge bg-light text-dark ms-1">@statusDistribution[LabOrderStatus.Pending]</span>
                }
            </a>
            <a asp-action="Index" asp-route-status="@LabOrderStatus.Collected"
               class="btn @(currentStatus == LabOrderStatus.Collected ? "btn-info" : "btn-outline-info") btn-sm">
                <i class="bi bi-droplet me-1"></i>Collected
                @if (statusDistribution.ContainsKey(LabOrderStatus.Collected))
                {
                    <span class="badge bg-light text-dark ms-1">@statusDistribution[LabOrderStatus.Collected]</span>
                }
            </a>
            <a asp-action="Index" asp-route-status="@LabOrderStatus.InProgress"
               class="btn @(currentStatus == LabOrderStatus.InProgress ? "btn-primary" : "btn-outline-primary") btn-sm">
                <i class="bi bi-arrow-repeat me-1"></i>In Progress
                @if (statusDistribution.ContainsKey(LabOrderStatus.InProgress))
                {
                    <span class="badge bg-light text-dark ms-1">@statusDistribution[LabOrderStatus.InProgress]</span>
                }
            </a>
            <a asp-action="Index" asp-route-status="@LabOrderStatus.Completed"
               class="btn @(currentStatus == LabOrderStatus.Completed ? "btn-success" : "btn-outline-success") btn-sm">
                <i class="bi bi-check-circle me-1"></i>Completed
                @if (statusDistribution.ContainsKey(LabOrderStatus.Completed))
                {
                    <span class="badge bg-light text-dark ms-1">@statusDistribution[LabOrderStatus.Completed]</span>
                }
            </a>
            <a asp-action="Index" asp-route-status="@LabOrderStatus.Cancelled"
               class="btn @(currentStatus == LabOrderStatus.Cancelled ? "btn-secondary" : "btn-outline-secondary") btn-sm">
                <i class="bi bi-x-circle me-1"></i>Cancelled
                @if (statusDistribution.ContainsKey(LabOrderStatus.Cancelled))
                {
                    <span class="badge bg-light text-dark ms-1">@statusDistribution[LabOrderStatus.Cancelled]</span>
                }
            </a>
        </div>
    </div>
</div>

<!-- Lab Orders Table -->
<div class="card card-rounded">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3">No lab orders found.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Create First Lab Order
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-xenon align-middle">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Date</th>
                            <th>Patient</th>
                            <th>External Lab</th>
                            <th class="text-center">Items</th>
                            <th class="text-end">Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr class="@(order.IsUrgent ? "table-warning" : "")">
                                <td>
                                    <a asp-action="Details" asp-route-id="@order.Id" class="text-decoration-none fw-semibold">
                                        @order.OrderNumber
                                    </a>
                                    @if (order.IsUrgent)
                                    {
                                        <span class="badge bg-danger ms-1">
                                            <i class="bi bi-exclamation-triangle"></i> URGENT
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @order.OrderDate.ToString("MMM dd, yyyy")
                                        <br />@order.OrderDate.ToString("hh:mm tt")
                                    </small>
                                </td>
                                <td>
                                    @if (order.Patient != null)
                                    {
                                        <div>@order.Patient.FirstName @order.Patient.LastName</div>
                                        <small class="text-muted">@order.Patient.FileNumber</small>
                                    }
                                </td>
                                <td>
                                    @if (order.ExternalLab != null)
                                    {
                                        <span class="badge bg-info">@order.ExternalLab.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">In-house</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">@order.Items.Count</span>
                                </td>
                                <td class="text-end">
                                    <strong>@order.TotalAmount.ToString("C")</strong>
                                    @if (order.IsPaid)
                                    {
                                        <br /><small class="text-success"><i class="bi bi-check-circle"></i> Paid</small>
                                    }
                                    else
                                    {
                                        <br /><small class="text-warning"><i class="bi bi-clock"></i> Unpaid</small>
                                    }
                                </td>
                                <td>
                                    @switch (order.Status)
                                    {
                                        case LabOrderStatus.Pending:
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-hourglass"></i> Pending
                                            </span>
                                            break;
                                        case LabOrderStatus.Collected:
                                            <span class="badge bg-info">
                                                <i class="bi bi-droplet"></i> Collected
                                            </span>
                                            break;
                                        case LabOrderStatus.InProgress:
                                            <span class="badge bg-primary">
                                                <i class="bi bi-arrow-repeat"></i> In Progress
                                            </span>
                                            break;
                                        case LabOrderStatus.Completed:
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Completed
                                            </span>
                                            break;
                                        case LabOrderStatus.Cancelled:
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle"></i> Cancelled
                                            </span>
                                            break;
                                    }
                                    @if (order.ExpectedCompletionDate.HasValue)
                                    {
                                        <br />
                                        <small class="text-muted">
                                            Due: @order.ExpectedCompletionDate.Value.ToString("MMM dd")
                                        </small>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@order.Id"
                                           class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (order.Status != LabOrderStatus.Completed && order.Status != LabOrderStatus.Cancelled)
                                        {
                                            <a asp-action="Edit" asp-route-id="@order.Id"
                                               class="btn btn-outline-secondary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
