@using XenonClinic.Core.Enums
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Core.Entities.LabOrder
@{
    ViewData["Title"] = $"Lab Order - {Model.OrderNumber}";
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-2">
    <h4 class="mb-0">
        <i class="bi bi-microscope me-2"></i>Lab Order: @Model.OrderNumber
    </h4>
    <div class="d-flex gap-2">
        @if (Model.Status != LabOrderStatus.Completed && Model.Status != LabOrderStatus.Cancelled)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                <i class="bi bi-pencil me-1"></i>Edit
            </a>
        }
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Order Status Alert -->
@if (Model.IsUrgent && Model.Status != LabOrderStatus.Completed)
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>URGENT ORDER</strong> - This order requires immediate attention.
    </div>
}

<div class="row g-4">
    <!-- Order Information -->
    <div class="col-lg-8">
        <div class="card card-rounded mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Order Information</h5>
                @switch (Model.Status)
                {
                    case LabOrderStatus.Pending:
                        <span class="badge bg-warning text-dark">
                            <i class="bi bi-hourglass"></i> Pending
                        </span>
                        break;
                    case LabOrderStatus.Collected:
                        <span class="badge bg-info">
                            <i class="bi bi-droplet"></i> Collected
                        </span>
                        break;
                    case LabOrderStatus.InProgress:
                        <span class="badge bg-primary">
                            <i class="bi bi-arrow-repeat"></i> In Progress
                        </span>
                        break;
                    case LabOrderStatus.Completed:
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle"></i> Completed
                        </span>
                        break;
                    case LabOrderStatus.Cancelled:
                        <span class="badge bg-secondary">
                            <i class="bi bi-x-circle"></i> Cancelled
                        </span>
                        break;
                }
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="text-muted small">Order Number</label>
                        <div class="fw-semibold">@Model.OrderNumber</div>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Order Date</label>
                        <div>@Model.OrderDate.ToString("MMMM dd, yyyy hh:mm tt")</div>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Patient</label>
                        <div class="fw-semibold">
                            @if (Model.Patient != null)
                            {
                                <div>@Model.Patient.FirstName @Model.Patient.LastName</div>
                                <small class="text-muted">File: @Model.Patient.FileNumber</small>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Ordered By</label>
                        <div>@Model.OrderedBy</div>
                    </div>
                    @if (Model.ExternalLab != null)
                    {
                        <div class="col-md-6">
                            <label class="text-muted small">External Lab</label>
                            <div>
                                <span class="badge bg-info">@Model.ExternalLab.Name</span>
                            </div>
                        </div>
                    }
                    @if (Model.CollectionDate.HasValue)
                    {
                        <div class="col-md-6">
                            <label class="text-muted small">Collection Date</label>
                            <div>@Model.CollectionDate.Value.ToString("MMMM dd, yyyy hh:mm tt")</div>
                            @if (!string.IsNullOrEmpty(Model.CollectedBy))
                            {
                                <small class="text-muted">Collected by: @Model.CollectedBy</small>
                            }
                        </div>
                    }
                    @if (Model.ExpectedCompletionDate.HasValue)
                    {
                        <div class="col-md-6">
                            <label class="text-muted small">Expected Completion</label>
                            <div>@Model.ExpectedCompletionDate.Value.ToString("MMMM dd, yyyy")</div>
                        </div>
                    }
                    @if (Model.CompletedDate.HasValue)
                    {
                        <div class="col-md-6">
                            <label class="text-muted small">Completed Date</label>
                            <div>@Model.CompletedDate.Value.ToString("MMMM dd, yyyy hh:mm tt")</div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ClinicalNotes))
                    {
                        <div class="col-12">
                            <label class="text-muted small">Clinical Notes</label>
                            <div class="alert alert-info mb-0">@Model.ClinicalNotes</div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="col-12">
                            <label class="text-muted small">Notes</label>
                            <div>@Model.Notes</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Ordered Tests -->
        <div class="card card-rounded mb-3">
            <div class="card-header">
                <h5 class="mb-0">Ordered Tests</h5>
            </div>
            <div class="card-body">
                @if (Model.Items.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>Test Code</th>
                                    <th>Test Name</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td><code>@item.LabTest?.TestCode</code></td>
                                        <td>@item.LabTest?.TestName</td>
                                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.TotalPrice.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-active">
                                    <td colspan="4" class="text-end fw-bold">Total Amount:</td>
                                    <td class="text-end fw-bold">@Model.TotalAmount.ToString("C")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">No tests ordered yet.</p>
                }
            </div>
        </div>

        <!-- Lab Results -->
        @if (Model.Results.Any())
        {
            <div class="card card-rounded">
                <div class="card-header">
                    <h5 class="mb-0">Test Results</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>Test</th>
                                    <th>Result</th>
                                    <th>Unit</th>
                                    <th>Reference Range</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var result in Model.Results.OrderBy(r => r.TestDate))
                                {
                                    <tr>
                                        <td>@result.LabTest?.TestName</td>
                                        <td class="fw-semibold">@result.ResultValue</td>
                                        <td>@result.Unit</td>
                                        <td><small class="text-muted">@result.ReferenceRange</small></td>
                                        <td>
                                            @if (result.IsAbnormal)
                                            {
                                                <span class="badge bg-warning text-dark">Abnormal</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Normal</span>
                                            }
                                        </td>
                                        <td>
                                            <small>@result.TestDate.ToString("MMM dd, yyyy")</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Status Actions -->
        @if (Model.Status != LabOrderStatus.Completed && Model.Status != LabOrderStatus.Cancelled)
        {
            <div class="card card-rounded mb-3">
                <div class="card-header">
                    <h6 class="mb-0">Update Status</h6>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <div class="d-grid gap-2">
                            @if (Model.Status == LabOrderStatus.Pending)
                            {
                                <button type="submit" name="status" value="@((int)LabOrderStatus.Collected)"
                                        class="btn btn-info btn-sm">
                                    <i class="bi bi-droplet me-1"></i>Mark as Collected
                                </button>
                            }
                            @if (Model.Status == LabOrderStatus.Collected || Model.Status == LabOrderStatus.Pending)
                            {
                                <button type="submit" name="status" value="@((int)LabOrderStatus.InProgress)"
                                        class="btn btn-primary btn-sm">
                                    <i class="bi bi-arrow-repeat me-1"></i>Start Processing
                                </button>
                            }
                            @if (Model.Status == LabOrderStatus.InProgress || Model.Status == LabOrderStatus.Collected)
                            {
                                <button type="submit" name="status" value="@((int)LabOrderStatus.Completed)"
                                        class="btn btn-success btn-sm">
                                    <i class="bi bi-check-circle me-1"></i>Mark as Completed
                                </button>
                            }
                            <button type="submit" name="status" value="@((int)LabOrderStatus.Cancelled)"
                                    class="btn btn-secondary btn-sm"
                                    onclick="return confirm('Are you sure you want to cancel this order?')">
                                <i class="bi bi-x-circle me-1"></i>Cancel Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }

        <!-- Payment Status -->
        <div class="card card-rounded mb-3">
            <div class="card-header">
                <h6 class="mb-0">Payment Information</h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>Total Amount:</span>
                    <strong class="fs-5">@Model.TotalAmount.ToString("C")</strong>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>Payment Status:</span>
                    @if (Model.IsPaid)
                    {
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle"></i> Paid
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">
                            <i class="bi bi-clock"></i> Unpaid
                        </span>
                    }
                </div>
            </div>
        </div>

        <!-- Audit Information -->
        <div class="card card-rounded">
            <div class="card-header">
                <h6 class="mb-0">Audit Information</h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <small class="text-muted">Created By:</small>
                    <div>@Model.CreatedBy</div>
                    <small class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</small>
                </div>
                @if (Model.LastModifiedBy != null)
                {
                    <div>
                        <small class="text-muted">Last Modified By:</small>
                        <div>@Model.LastModifiedBy</div>
                        @if (Model.LastModifiedAt.HasValue)
                        {
                            <small class="text-muted">@Model.LastModifiedAt.Value.ToString("MMM dd, yyyy hh:mm tt")</small>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
