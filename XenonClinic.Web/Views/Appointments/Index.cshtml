@using XenonClinic.Core.Enums
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IStringLocalizer<XenonClinic.Web.Resources.SharedResource> SharedLocalizer

@{
    ViewData["Title"] = Localizer["Appointments"];
    var appointments = ViewBag.Appointments as List<dynamic> ?? new List<dynamic>();
    var currentDate = ViewBag.CurrentDate as DateTime?;
    var currentStatus = ViewBag.CurrentStatus as AppointmentStatus?;
    var pageNumber = ViewBag.PageNumber as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-3 gap-2">
    <div>
        <h2 class="mb-0">@Localizer["Appointments"]</h2>
        <p class="text-muted">@totalCount @Localizer["TotalAppointments"]</p>
    </div>
    <a class="btn btn-xenon" asp-action="Create"><i class="bi bi-plus-lg"></i> @Localizer["NewAppointment"]</a>
</div>

<!-- Filter Form -->
<form method="get" class="mb-3">
    <div class="card card-rounded p-3">
        <div class="row g-3">
            <div class="col-md-4">
                <label for="date" class="form-label">@Localizer["Date"]</label>
                <input type="date" name="date" id="date" value="@(currentDate?.ToString("yyyy-MM-dd"))" class="form-control" />
            </div>
            <div class="col-md-4">
                <label for="status" class="form-label">@Localizer["Status"]</label>
                <select name="status" id="status" class="form-select">
                    <option value="">@Localizer["AllStatuses"]</option>
                    <option value="@((int)AppointmentStatus.Booked)" selected="@(currentStatus == AppointmentStatus.Booked)">@Localizer["Booked"]</option>
                    <option value="@((int)AppointmentStatus.Completed)" selected="@(currentStatus == AppointmentStatus.Completed)">@Localizer["Completed"]</option>
                    <option value="@((int)AppointmentStatus.Cancelled)" selected="@(currentStatus == AppointmentStatus.Cancelled)">@Localizer["Cancelled"]</option>
                    <option value="@((int)AppointmentStatus.NoShow)" selected="@(currentStatus == AppointmentStatus.NoShow)">@Localizer["NoShow"]</option>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end gap-2">
                <button class="btn btn-primary flex-grow-1" type="submit">
                    <i class="bi bi-funnel"></i> @Localizer["Filter"]
                </button>
                <a class="btn btn-outline-secondary" asp-action="Index">
                    <i class="bi bi-x-lg"></i> @Localizer["Clear"]
                </a>
            </div>
        </div>
    </div>
</form>

<div class="card card-rounded">
    @if (appointments.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Localizer["Patient"]</th>
                        <th class="d-none d-md-table-cell">@Localizer["EmiratesID"]</th>
                        <th>@Localizer["DateTime"]</th>
                        <th class="d-none d-lg-table-cell">@Localizer["Type"]</th>
                        <th>@Localizer["Status"]</th>
                        <th class="d-none d-xl-table-cell">@Localizer["Branch"]</th>
                        <th class="text-end">@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in appointments)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Patients" asp-action="Details" asp-route-id="@appointment.PatientId" class="text-decoration-none">
                                    @appointment.PatientName
                                </a>
                            </td>
                            <td class="d-none d-md-table-cell">@appointment.PatientEmiratesId</td>
                            <td>
                                <div>@appointment.StartTime.ToString("ddd, dd MMM yyyy")</div>
                                <small class="text-muted">@appointment.StartTime.ToString("hh:mm tt") - @appointment.EndTime.ToString("hh:mm tt")</small>
                            </td>
                            <td class="d-none d-lg-table-cell">
                                @{
                                    var typeClass = appointment.Type switch
                                    {
                                        AppointmentType.HearingTest => "bg-primary",
                                        AppointmentType.Fitting => "bg-success",
                                        AppointmentType.Consultation => "bg-info",
                                        AppointmentType.Repair => "bg-warning",
                                        AppointmentType.FollowUp => "bg-secondary",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @typeClass">@appointment.Type</span>
                            </td>
                            <td>
                                @{
                                    var statusClass = appointment.Status switch
                                    {
                                        AppointmentStatus.Booked => "bg-primary",
                                        AppointmentStatus.Completed => "bg-success",
                                        AppointmentStatus.Cancelled => "bg-danger",
                                        AppointmentStatus.NoShow => "bg-warning",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass">@appointment.Status</span>
                            </td>
                            <td class="d-none d-xl-table-cell">@appointment.BranchName</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-outline-primary" title="@Localizer["View"]">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-outline-secondary" title="@Localizer["Edit"]">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (totalPages > 1)
        {
            <div class="card-footer bg-white">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0 justify-content-center flex-wrap">
                        <li class="page-item @(pageNumber > 1 ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber - 1)" asp-route-date="@(currentDate?.ToString("yyyy-MM-dd"))" asp-route-status="@currentStatus">
                                @Localizer["Previous"]
                            </a>
                        </li>
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == pageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-date="@(currentDate?.ToString("yyyy-MM-dd"))" asp-route-status="@currentStatus">@i</a>
                            </li>
                        }
                        <li class="page-item @(pageNumber < totalPages ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber + 1)" asp-route-date="@(currentDate?.ToString("yyyy-MM-dd"))" asp-route-status="@currentStatus">
                                @Localizer["Next"]
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="text-center mt-2 small text-muted">
                    @Localizer["Page"] @pageNumber @Localizer["Of"] @totalPages (@Localizer["Showing"] @appointments.Count @Localizer["Of"] @totalCount @Localizer["Appointments"].Value.ToLower())
                </div>
            </div>
        }
    }
    else
    {
        <div class="card-body text-center py-5">
            <i class="bi bi-calendar-x display-1 text-muted"></i>
            <p class="text-muted mt-3">@Localizer["NoAppointmentsFound"]</p>
            <a class="btn btn-primary mt-2" asp-action="Create">
                <i class="bi bi-plus-lg"></i> @Localizer["CreateFirstAppointment"]
            </a>
        </div>
    }
</div>
