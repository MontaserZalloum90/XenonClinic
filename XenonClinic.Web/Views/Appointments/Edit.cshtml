@using XenonClinic.Core.Enums
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.EditAppointmentViewModel

@{
    ViewData["Title"] = Localizer["EditAppointment"];
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@Localizer["Home"]</a></li>
        <li class="breadcrumb-item"><a asp-controller="Appointments" asp-action="Index">@Localizer["Appointments"]</a></li>
        <li class="breadcrumb-item"><a asp-controller="Appointments" asp-action="Details" asp-route-id="@Model.Id">@Localizer["Details"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["Edit"]</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">@Localizer["EditAppointment"]</h3>
</div>

<form asp-action="Edit" method="post" class="card card-rounded p-3 p-md-4">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="BranchId" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row g-3">
        <!-- Patient Selection -->
        <div class="col-md-6 col-12">
            <label asp-for="PatientId" class="form-label">
                @Localizer["Patient"] <span class="text-danger">*</span>
            </label>
            <select asp-for="PatientId" asp-items="ViewBag.Patients" class="form-select">
                <option value="">@Localizer["SelectPatient"]</option>
            </select>
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>

        <!-- Provider Selection -->
        <div class="col-md-6 col-12">
            <label asp-for="ProviderId" class="form-label">
                @Localizer["Provider"]
            </label>
            <select asp-for="ProviderId" asp-items="ViewBag.Providers" class="form-select">
                <option value="">@Localizer["SelectProvider"]</option>
            </select>
            <span asp-validation-for="ProviderId" class="text-danger"></span>
            <div class="form-text">@Localizer["OptionalSelectProvider"]</div>
        </div>

        <!-- Appointment Date -->
        <div class="col-md-6 col-12">
            <label asp-for="AppointmentDate" class="form-label">
                @Localizer["AppointmentDate"] <span class="text-danger">*</span>
            </label>
            <input asp-for="AppointmentDate" class="form-control" type="date" />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        <!-- Start Time -->
        <div class="col-md-3 col-sm-6 col-12">
            <label asp-for="StartTime" class="form-label">
                @Localizer["StartTime"] <span class="text-danger">*</span>
            </label>
            <input asp-for="StartTime" class="form-control" type="time" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <!-- Duration -->
        <div class="col-md-3 col-sm-6 col-12">
            <label asp-for="DurationMinutes" class="form-label">
                @Localizer["DurationMinutes"] <span class="text-danger">*</span>
            </label>
            <select asp-for="DurationMinutes" class="form-select">
                <option value="15">15 @Localizer["Minutes"]</option>
                <option value="30">30 @Localizer["Minutes"]</option>
                <option value="45">45 @Localizer["Minutes"]</option>
                <option value="60">60 @Localizer["Minutes"]</option>
                <option value="90">90 @Localizer["Minutes"]</option>
                <option value="120">120 @Localizer["Minutes"]</option>
            </select>
            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
        </div>

        <!-- Appointment Type -->
        <div class="col-md-6 col-12">
            <label asp-for="Type" class="form-label">
                @Localizer["AppointmentType"] <span class="text-danger">*</span>
            </label>
            <select asp-for="Type" class="form-select">
                <option value="@((int)AppointmentType.HearingTest)">@Localizer["HearingTest"]</option>
                <option value="@((int)AppointmentType.Fitting)">@Localizer["Fitting"]</option>
                <option value="@((int)AppointmentType.Consultation)">@Localizer["Consultation"]</option>
                <option value="@((int)AppointmentType.Repair)">@Localizer["Repair"]</option>
                <option value="@((int)AppointmentType.FollowUp)">@Localizer["FollowUp"]</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <!-- Status -->
        <div class="col-md-6 col-12">
            <label asp-for="Status" class="form-label">
                @Localizer["Status"] <span class="text-danger">*</span>
            </label>
            <select asp-for="Status" class="form-select">
                <option value="@((int)AppointmentStatus.Booked)">@Localizer["Booked"]</option>
                <option value="@((int)AppointmentStatus.Completed)">@Localizer["Completed"]</option>
                <option value="@((int)AppointmentStatus.Cancelled)">@Localizer["Cancelled"]</option>
                <option value="@((int)AppointmentStatus.NoShow)">@Localizer["NoShow"]</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <!-- Notes -->
        <div class="col-12">
            <label asp-for="Notes" class="form-label">@Localizer["Notes"]</label>
            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="@Localizer["EnterAppointmentNotes"]"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
    </div>

    <!-- Warning Box for Conflicts -->
    <div class="alert alert-warning mt-3">
        <h6 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> @Localizer["ImportantNote"]</h6>
        <p class="mb-0">@Localizer["ChangingAppointmentTimeWillCheckConflicts"]</p>
    </div>

    <!-- Form Buttons -->
    <div class="mt-4 d-flex flex-column flex-sm-row justify-content-end gap-2">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
            <i class="bi bi-x-lg"></i> @Localizer["Cancel"]
        </a>
        <button type="submit" class="btn btn-xenon">
            <i class="bi bi-check-lg"></i> @Localizer["SaveChanges"]
        </button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
