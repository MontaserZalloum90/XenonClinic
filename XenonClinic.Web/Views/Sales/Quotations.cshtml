@model IEnumerable<XenonClinic.Web.Models.QuotationDto>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Quotations"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Quotations"]</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> @Localizer["Back_to_Dashboard"]
        </a>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">@Localizer["Status"]</label>
                    <select name="status" class="form-select">
                        <option value="">@Localizer["All_Statuses"]</option>
                        @foreach (var status in Enum.GetValues<XenonClinic.Core.Enums.QuotationStatus>())
                        {
                            <option value="@status" selected="@(Context.Request.Query["status"] == status.ToString() ? "selected" : null)">
                                @Localizer[$"QuotationStatus_{status}"]
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> @Localizer["Search"]
                    </button>
                    <a asp-action="Quotations" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> @Localizer["Clear"]
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Quotations Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Quotation_Number"]</th>
                                <th>@Localizer["Date"]</th>
                                <th>@Localizer["Expiry_Date"]</th>
                                <th>@Localizer["Customer"]</th>
                                <th>@Localizer["Total"]</th>
                                <th>@Localizer["Status"]</th>
                                <th>@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var quotation in Model)
                            {
                                <tr class="@(quotation.IsExpired ? "table-secondary" : "")">
                                    <td><strong>@quotation.QuotationNumber</strong></td>
                                    <td>@quotation.QuotationDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (quotation.ExpiryDate.HasValue)
                                        {
                                            @quotation.ExpiryDate.Value.ToString("yyyy-MM-dd")
                                            if (quotation.IsExpired)
                                            {
                                                <span class="badge bg-secondary ms-1">@Localizer["Expired"]</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@quotation.PatientName</td>
                                    <td>@quotation.Total.ToString("N2") AED</td>
                                    <td>
                                        @{
                                            var statusClass = quotation.Status switch
                                            {
                                                XenonClinic.Core.Enums.QuotationStatus.Draft => "secondary",
                                                XenonClinic.Core.Enums.QuotationStatus.Sent => "primary",
                                                XenonClinic.Core.Enums.QuotationStatus.Accepted => "success",
                                                XenonClinic.Core.Enums.QuotationStatus.Rejected => "danger",
                                                XenonClinic.Core.Enums.QuotationStatus.Expired => "dark",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@Localizer[$"QuotationStatus_{quotation.Status}"]</span>
                                    </td>
                                    <td>
                                        @if (quotation.Status == XenonClinic.Core.Enums.QuotationStatus.Accepted || quotation.Status == XenonClinic.Core.Enums.QuotationStatus.Sent)
                                        {
                                            <a asp-action="Create" asp-route-quotationId="@quotation.Id" class="btn btn-sm btn-success" title="@Localizer["Convert_to_Sale"]">
                                                <i class="bi bi-arrow-right-circle"></i> @Localizer["Convert"]
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer">
                    <div class="text-muted">
                        @Localizer["Total"]: @Model.Count() @Localizer["Quotations"]
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 d-block mb-3 text-muted"></i>
                    <h5 class="text-muted">@Localizer["No_Quotations_Found"]</h5>
                    <p class="text-muted">@Localizer["Try_Different_Filters"]</p>
                </div>
            }
        </div>
    </div>
</div>
