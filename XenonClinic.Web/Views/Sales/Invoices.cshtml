@model IEnumerable<XenonClinic.Web.Models.SaleDto>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Invoices"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Invoices"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> @Localizer["New_Sale"]
        </a>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">@Localizer["Sale_Status"]</label>
                    <select name="status" class="form-select">
                        <option value="">@Localizer["All_Statuses"]</option>
                        @foreach (var status in Enum.GetValues<XenonClinic.Core.Enums.SaleStatus>())
                        {
                            <option value="@status" selected="@(Context.Request.Query["status"] == status.ToString() ? "selected" : null)">
                                @Localizer[$"SaleStatus_{status}"]
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">@Localizer["Payment_Status"]</label>
                    <select name="paymentStatus" class="form-select">
                        <option value="">@Localizer["All_Statuses"]</option>
                        @foreach (var status in Enum.GetValues<XenonClinic.Core.Enums.PaymentStatus>())
                        {
                            <option value="@status" selected="@(Context.Request.Query["paymentStatus"] == status.ToString() ? "selected" : null)">
                                @Localizer[$"PaymentStatus_{status}"]
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["From_Date"]</label>
                    <input type="date" name="fromDate" class="form-control" value="@Context.Request.Query["fromDate"]">
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["To_Date"]</label>
                    <input type="date" name="toDate" class="form-control" value="@Context.Request.Query["toDate"]">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> @Localizer["Search"]
                    </button>
                    <a asp-action="Invoices" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> @Localizer["Clear"]
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Invoices Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Invoice_Number"]</th>
                                <th>@Localizer["Date"]</th>
                                <th>@Localizer["Due_Date"]</th>
                                <th>@Localizer["Customer"]</th>
                                <th>@Localizer["Total"]</th>
                                <th>@Localizer["Paid"]</th>
                                <th>@Localizer["Balance"]</th>
                                <th>@Localizer["Status"]</th>
                                <th>@Localizer["Payment_Status"]</th>
                                <th>@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sale in Model)
                            {
                                <tr class="@(sale.IsOverdue ? "table-danger" : "")">
                                    <td><strong>@sale.InvoiceNumber</strong></td>
                                    <td>@sale.SaleDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (sale.DueDate.HasValue)
                                        {
                                            @sale.DueDate.Value.ToString("yyyy-MM-dd")
                                            if (sale.IsOverdue)
                                            {
                                                <span class="badge bg-danger ms-1">@Localizer["Overdue"]</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@sale.PatientName</td>
                                    <td>@sale.Total.ToString("N2") AED</td>
                                    <td>@sale.PaidAmount.ToString("N2") AED</td>
                                    <td>
                                        @if (sale.Balance > 0)
                                        {
                                            <strong class="text-danger">@sale.Balance.ToString("N2") AED</strong>
                                        }
                                        else
                                        {
                                            <span class="text-success">0.00 AED</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = sale.Status switch
                                            {
                                                XenonClinic.Core.Enums.SaleStatus.Draft => "secondary",
                                                XenonClinic.Core.Enums.SaleStatus.Confirmed => "info",
                                                XenonClinic.Core.Enums.SaleStatus.Completed => "success",
                                                XenonClinic.Core.Enums.SaleStatus.Cancelled => "dark",
                                                XenonClinic.Core.Enums.SaleStatus.Refunded => "warning",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@Localizer[$"SaleStatus_{sale.Status}"]</span>
                                    </td>
                                    <td>
                                        @{
                                            var paymentClass = sale.PaymentStatus switch
                                            {
                                                XenonClinic.Core.Enums.PaymentStatus.Paid => "success",
                                                XenonClinic.Core.Enums.PaymentStatus.Partial => "warning",
                                                XenonClinic.Core.Enums.PaymentStatus.Pending => "secondary",
                                                XenonClinic.Core.Enums.PaymentStatus.Overdue => "danger",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@paymentClass">@Localizer[$"PaymentStatus_{sale.PaymentStatus}"]</span>
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@sale.Id" class="btn btn-sm btn-outline-primary" title="@Localizer["View"]">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="4" class="text-end"><strong>@Localizer["Total"]:</strong></td>
                                <td><strong>@Model.Sum(s => s.Total).ToString("N2") AED</strong></td>
                                <td><strong>@Model.Sum(s => s.PaidAmount).ToString("N2") AED</strong></td>
                                <td><strong class="text-danger">@Model.Sum(s => s.Balance).ToString("N2") AED</strong></td>
                                <td colspan="3"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="card-footer">
                    <div class="text-muted">
                        @Localizer["Total"]: @Model.Count() @Localizer["Invoices"]
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 d-block mb-3 text-muted"></i>
                    <h5 class="text-muted">@Localizer["No_Invoices_Found"]</h5>
                    <p class="text-muted">@Localizer["Try_Different_Filters"]</p>
                    <a asp-action="Create" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle"></i> @Localizer["Create_First_Sale"]
                    </a>
                </div>
            }
        </div>
    </div>
</div>
