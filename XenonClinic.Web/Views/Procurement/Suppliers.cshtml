@model IEnumerable<XenonClinic.Web.Models.SupplierDto>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Suppliers"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Suppliers"]</h2>
        <div>
            <a asp-action="CreateSupplier" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @Localizer["Add_Supplier"]
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> @Localizer["Back_to_Dashboard"]
            </a>
        </div>
    </div>

    <!-- Suppliers Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Supplier_Name"]</th>
                                <th>@Localizer["Code"]</th>
                                <th>@Localizer["Contact_Person"]</th>
                                <th>@Localizer["Phone"]</th>
                                <th>@Localizer["Email"]</th>
                                <th>@Localizer["City"]</th>
                                <th>@Localizer["Payment_Terms"]</th>
                                <th>@Localizer["Total_Orders"]</th>
                                <th>@Localizer["Outstanding"]</th>
                                <th>@Localizer["Status"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var supplier in Model)
                            {
                                <tr>
                                    <td><strong>@supplier.Name</strong></td>
                                    <td>@supplier.Code</td>
                                    <td>@supplier.ContactPerson</td>
                                    <td>
                                        @supplier.PhoneNumber
                                        @if (!string.IsNullOrEmpty(supplier.Mobile))
                                        {
                                            <br /><small class="text-muted">@supplier.Mobile</small>
                                        }
                                    </td>
                                    <td><small>@supplier.Email</small></td>
                                    <td>@supplier.City</td>
                                    <td>
                                        @if (supplier.PaymentTermsDays.HasValue)
                                        {
                                            <span>@supplier.PaymentTermsDays @Localizer["Days"]</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@supplier.TotalPurchaseOrders</td>
                                    <td>
                                        @if (supplier.OutstandingBalance > 0)
                                        {
                                            <span class="text-danger">@supplier.OutstandingBalance.ToString("N2") AED</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@(supplier.IsActive ? "success" : "secondary")">
                                            @Localizer[supplier.IsActive ? "Active" : "Inactive"]
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer">
                    <div class="text-muted">
                        @Localizer["Total"]: @Model.Count() @Localizer["Suppliers"]
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-building fs-1 d-block mb-3 text-muted"></i>
                    <h5 class="text-muted">@Localizer["No_Suppliers_Found"]</h5>
                    <p class="text-muted">@Localizer["Add_First_Supplier"]</p>
                    <a asp-action="CreateSupplier" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> @Localizer["Add_Supplier"]
                    </a>
                </div>
            }
        </div>
    </div>
</div>
