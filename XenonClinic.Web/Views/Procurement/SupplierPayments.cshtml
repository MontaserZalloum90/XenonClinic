@model IEnumerable<XenonClinic.Web.Models.SupplierPaymentDto>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Supplier_Payments"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Supplier_Payments"]</h2>
        <div>
            <a asp-action="CreateSupplierPayment" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @Localizer["New_Payment"]
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> @Localizer["Back_to_Dashboard"]
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">@Localizer["Supplier"]</label>
                    <select name="supplierId" class="form-select">
                        <option value="">@Localizer["All_Suppliers"]</option>
                        @if (ViewBag.Suppliers != null)
                        {
                            @foreach (var supplier in (IEnumerable<SelectListItem>)ViewBag.Suppliers)
                            {
                                <option value="@supplier.Value" selected="@(Context.Request.Query["supplierId"] == supplier.Value ? "selected" : null)">
                                    @supplier.Text
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">@Localizer["From_Date"]</label>
                    <input type="date" name="fromDate" class="form-control" value="@Context.Request.Query["fromDate"]" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">@Localizer["To_Date"]</label>
                    <input type="date" name="toDate" class="form-control" value="@Context.Request.Query["toDate"]" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> @Localizer["Search"]
                    </button>
                    <a asp-action="SupplierPayments" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> @Localizer["Clear"]
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Supplier Payments Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Payment_Number"]</th>
                                <th>@Localizer["Date"]</th>
                                <th>@Localizer["Supplier"]</th>
                                <th>@Localizer["Purchase_Order"]</th>
                                <th>@Localizer["Amount"]</th>
                                <th>@Localizer["Payment_Method"]</th>
                                <th>@Localizer["Reference"]</th>
                                <th>@Localizer["Paid_By"]</th>
                                <th>@Localizer["Status"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td><strong>@payment.PaymentNumber</strong></td>
                                    <td>@payment.PaymentDate.ToString("yyyy-MM-dd")</td>
                                    <td>@payment.SupplierName</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(payment.PurchaseOrderNumber))
                                        {
                                            <span>@payment.PurchaseOrderNumber</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">@Localizer["General_Payment"]</span>
                                        }
                                    </td>
                                    <td><strong>@payment.Amount.ToString("N2") AED</strong></td>
                                    <td>
                                        @{
                                            var methodIcon = payment.PaymentMethod switch
                                            {
                                                XenonClinic.Core.Enums.PaymentMethod.Cash => "cash-coin",
                                                XenonClinic.Core.Enums.PaymentMethod.Card => "credit-card",
                                                XenonClinic.Core.Enums.PaymentMethod.BankTransfer => "bank",
                                                XenonClinic.Core.Enums.PaymentMethod.Cheque => "receipt",
                                                _ => "wallet2"
                                            };
                                        }
                                        <i class="bi bi-@methodIcon"></i> @Localizer[$"PaymentMethod_{payment.PaymentMethod}"]
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(payment.ReferenceNumber))
                                        {
                                            <small>@payment.ReferenceNumber</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td><small>@payment.PaidBy</small></td>
                                    <td>
                                        @{
                                            var statusClass = payment.Status switch
                                            {
                                                XenonClinic.Core.Enums.SupplierPaymentStatus.Pending => "warning",
                                                XenonClinic.Core.Enums.SupplierPaymentStatus.Paid => "success",
                                                XenonClinic.Core.Enums.SupplierPaymentStatus.Cancelled => "danger",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@Localizer[$"SupplierPaymentStatus_{payment.Status}"]</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="text-muted">
                                @Localizer["Total"]: @Model.Count() @Localizer["Payments"]
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <strong>@Localizer["Total_Amount"]:</strong> @Model.Sum(p => p.Amount).ToString("N2") AED
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-cash-stack fs-1 d-block mb-3 text-muted"></i>
                    <h5 class="text-muted">@Localizer["No_Supplier_Payments_Found"]</h5>
                    <p class="text-muted">@Localizer["Try_Different_Filters"]</p>
                </div>
            }
        </div>
    </div>
</div>
