@model XenonClinic.Web.Models.ProcurementDashboardViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Procurement"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Procurement_Dashboard"]</h2>
    </div>

    <!-- Metrics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted">@Localizer["Total_Purchase_Orders"]</h6>
                            <h3 class="mb-0">@Model.TotalPurchaseOrders</h3>
                        </div>
                        <i class="bi bi-cart-check fs-1 text-primary"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-action="PurchaseOrders" class="text-decoration-none">@Localizer["View_All"] <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted">@Localizer["Pending_Approvals"]</h6>
                            <h3 class="mb-0">@Model.PendingApprovals</h3>
                        </div>
                        <i class="bi bi-hourglass-split fs-1 text-warning"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <small class="text-muted">@Localizer["Requires_Attention"]</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted">@Localizer["Total_Purchase_Value"]</h6>
                            <h3 class="mb-0">@Model.TotalPurchaseValue.ToString("N0")</h3>
                            <small class="text-muted">AED</small>
                        </div>
                        <i class="bi bi-currency-exchange fs-1 text-success"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <small class="text-muted">@Localizer["All_Time"]</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted">@Localizer["Outstanding_Payments"]</h6>
                            <h3 class="mb-0">@Model.OutstandingPayments.ToString("N0")</h3>
                            <small class="text-muted">AED</small>
                        </div>
                        <i class="bi bi-cash-coin fs-1 text-danger"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-action="SupplierPayments" class="text-decoration-none">@Localizer["Manage_Payments"] <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Metrics -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">@Localizer["Total_Suppliers"]</h6>
                    <h4>@Model.TotalSuppliers</h4>
                    <small class="text-success">@Model.ActiveSuppliers @Localizer["Active"]</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">@Localizer["Active_Purchase_Orders"]</h6>
                    <h4>@Model.ActivePurchaseOrders</h4>
                    <small class="text-muted">@Localizer["In_Progress"]</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">@Localizer["Goods_Receipts_This_Month"]</h6>
                    <h4>@Model.GoodsReceiptsThisMonth</h4>
                    <small class="text-muted">@DateTime.UtcNow.ToString("MMMM yyyy")</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6>@Localizer["Quick_Actions"]</h6>
                    <div class="d-grid gap-2">
                        <a asp-action="CreatePurchaseOrder" class="btn btn-light btn-sm">
                            <i class="bi bi-plus-circle"></i> @Localizer["New_Purchase_Order"]
                        </a>
                        <a asp-action="CreateGoodsReceipt" class="btn btn-light btn-sm">
                            <i class="bi bi-box-arrow-in-down"></i> @Localizer["New_Goods_Receipt"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Recent Purchase Orders -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Localizer["Recent_Purchase_Orders"]</h5>
                    <a asp-action="PurchaseOrders" class="btn btn-sm btn-outline-primary">@Localizer["View_All"]</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentPurchaseOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>@Localizer["Order_Number"]</th>
                                        <th>@Localizer["Supplier"]</th>
                                        <th>@Localizer["Date"]</th>
                                        <th>@Localizer["Total"]</th>
                                        <th>@Localizer["Status"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var po in Model.RecentPurchaseOrders)
                                    {
                                        <tr>
                                            <td><strong>@po.OrderNumber</strong></td>
                                            <td>@po.SupplierName</td>
                                            <td>@po.OrderDate.ToString("yyyy-MM-dd")</td>
                                            <td>@po.Total.ToString("N2") AED</td>
                                            <td>
                                                @{
                                                    var statusClass = po.Status switch
                                                    {
                                                        XenonClinic.Core.Enums.PurchaseOrderStatus.Draft => "secondary",
                                                        XenonClinic.Core.Enums.PurchaseOrderStatus.Submitted => "info",
                                                        XenonClinic.Core.Enums.PurchaseOrderStatus.Approved => "primary",
                                                        XenonClinic.Core.Enums.PurchaseOrderStatus.Ordered => "warning",
                                                        XenonClinic.Core.Enums.PurchaseOrderStatus.PartiallyReceived => "warning",
                                                        XenonClinic.Core.Enums.PurchaseOrderStatus.Received => "success",
                                                        XenonClinic.Core.Enums.PurchaseOrderStatus.Cancelled => "danger",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@Localizer[$"PurchaseOrderStatus_{po.Status}"]</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">@Localizer["No_Recent_Purchase_Orders"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Goods Receipts -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Localizer["Recent_Goods_Receipts"]</h5>
                    <a asp-action="GoodsReceipts" class="btn btn-sm btn-outline-primary">@Localizer["View_All"]</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentGoodsReceipts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>@Localizer["Receipt_Number"]</th>
                                        <th>@Localizer["Supplier"]</th>
                                        <th>@Localizer["Date"]</th>
                                        <th>@Localizer["Items"]</th>
                                        <th>@Localizer["Status"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var gr in Model.RecentGoodsReceipts)
                                    {
                                        <tr>
                                            <td><strong>@gr.ReceiptNumber</strong></td>
                                            <td>@gr.SupplierName</td>
                                            <td>@gr.ReceiptDate.ToString("yyyy-MM-dd")</td>
                                            <td>@gr.ItemCount</td>
                                            <td>
                                                @{
                                                    var statusClass = gr.Status switch
                                                    {
                                                        XenonClinic.Core.Enums.GoodsReceiptStatus.Draft => "secondary",
                                                        XenonClinic.Core.Enums.GoodsReceiptStatus.Completed => "success",
                                                        XenonClinic.Core.Enums.GoodsReceiptStatus.Cancelled => "danger",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@Localizer[$"GoodsReceiptStatus_{gr.Status}"]</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">@Localizer["No_Recent_Goods_Receipts"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top Suppliers -->
    @if (Model.TopSuppliers.Any())
    {
        <div class="card mt-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@Localizer["Suppliers"]</h5>
                <a asp-action="Suppliers" class="btn btn-sm btn-outline-primary">@Localizer["View_All"]</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Supplier_Name"]</th>
                                <th>@Localizer["Code"]</th>
                                <th>@Localizer["Contact"]</th>
                                <th>@Localizer["Payment_Terms"]</th>
                                <th>@Localizer["Total_Orders"]</th>
                                <th>@Localizer["Status"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var supplier in Model.TopSuppliers)
                            {
                                <tr>
                                    <td><strong>@supplier.Name</strong></td>
                                    <td>@supplier.Code</td>
                                    <td>
                                        <small>@supplier.ContactPerson</small><br />
                                        <small class="text-muted">@supplier.PhoneNumber</small>
                                    </td>
                                    <td>
                                        @if (supplier.PaymentTermsDays.HasValue)
                                        {
                                            <span>@supplier.PaymentTermsDays @Localizer["Days"]</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@supplier.TotalPurchaseOrders</td>
                                    <td>
                                        <span class="badge bg-@(supplier.IsActive ? "success" : "secondary")">
                                            @Localizer[supplier.IsActive ? "Active" : "Inactive"]
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
