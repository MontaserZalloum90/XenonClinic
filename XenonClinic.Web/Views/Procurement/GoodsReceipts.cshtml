@model IEnumerable<XenonClinic.Web.Models.GoodsReceiptDto>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Goods_Receipts"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Goods_Receipts"]</h2>
        <div>
            <a asp-action="CreateGoodsReceipt" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @Localizer["New_Goods_Receipt"]
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> @Localizer["Back_to_Dashboard"]
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">@Localizer["Status"]</label>
                    <select name="status" class="form-select">
                        <option value="">@Localizer["All_Statuses"]</option>
                        @foreach (var status in Enum.GetValues<XenonClinic.Core.Enums.GoodsReceiptStatus>())
                        {
                            <option value="@status" selected="@(Context.Request.Query["status"] == status.ToString() ? "selected" : null)">
                                @Localizer[$"GoodsReceiptStatus_{status}"]
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">@Localizer["Supplier"]</label>
                    <select name="supplierId" class="form-select">
                        <option value="">@Localizer["All_Suppliers"]</option>
                        @if (ViewBag.Suppliers != null)
                        {
                            @foreach (var supplier in (IEnumerable<SelectListItem>)ViewBag.Suppliers)
                            {
                                <option value="@supplier.Value" selected="@(Context.Request.Query["supplierId"] == supplier.Value ? "selected" : null)">
                                    @supplier.Text
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["From_Date"]</label>
                    <input type="date" name="fromDate" class="form-control" value="@Context.Request.Query["fromDate"]" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["To_Date"]</label>
                    <input type="date" name="toDate" class="form-control" value="@Context.Request.Query["toDate"]" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> @Localizer["Search"]
                    </button>
                    <a asp-action="GoodsReceipts" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> @Localizer["Clear"]
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Goods Receipts Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Receipt_Number"]</th>
                                <th>@Localizer["Date"]</th>
                                <th>@Localizer["Supplier"]</th>
                                <th>@Localizer["Purchase_Order"]</th>
                                <th>@Localizer["Supplier_Invoice"]</th>
                                <th>@Localizer["Items"]</th>
                                <th>@Localizer["Received_By"]</th>
                                <th>@Localizer["Status"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var gr in Model)
                            {
                                <tr>
                                    <td><strong>@gr.ReceiptNumber</strong></td>
                                    <td>@gr.ReceiptDate.ToString("yyyy-MM-dd")</td>
                                    <td>@gr.SupplierName</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(gr.PurchaseOrderNumber))
                                        {
                                            <span>@gr.PurchaseOrderNumber</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">@Localizer["Direct_Receipt"]</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(gr.SupplierInvoiceNumber))
                                        {
                                            <span>@gr.SupplierInvoiceNumber</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@gr.ItemCount</td>
                                    <td>@gr.ReceivedBy</td>
                                    <td>
                                        @{
                                            var statusClass = gr.Status switch
                                            {
                                                XenonClinic.Core.Enums.GoodsReceiptStatus.Draft => "secondary",
                                                XenonClinic.Core.Enums.GoodsReceiptStatus.Completed => "success",
                                                XenonClinic.Core.Enums.GoodsReceiptStatus.Cancelled => "danger",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@Localizer[$"GoodsReceiptStatus_{gr.Status}"]</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer">
                    <div class="text-muted">
                        @Localizer["Total"]: @Model.Count() @Localizer["Goods_Receipts"]
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 d-block mb-3 text-muted"></i>
                    <h5 class="text-muted">@Localizer["No_Goods_Receipts_Found"]</h5>
                    <p class="text-muted">@Localizer["Try_Different_Filters"]</p>
                </div>
            }
        </div>
    </div>
</div>
