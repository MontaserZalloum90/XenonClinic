@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.CreatePatientViewModel
@{
    ViewData["Title"] = Localizer["EditPatient"];
}

<div class="mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Patients"]</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@ViewContext.RouteData.Values["id"]">@Model.FullNameEn</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Localizer["Edit"]</li>
        </ol>
    </nav>
    <h2 class="mb-0">@Localizer["EditPatient"]</h2>
</div>

<form asp-action="Edit" method="post" class="card card-rounded p-3 p-md-4">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row g-3">
        <div class="col-md-6 col-12">
            <label class="form-label">@Localizer["EmiratesID"] <span class="text-danger">*</span></label>
            <input asp-for="EmiratesId" class="form-control" />
            <span asp-validation-for="EmiratesId" class="text-danger"></span>
        </div>

        <div class="col-md-6 col-12">
            <label class="form-label">@Localizer["FullNameEnglish"] <span class="text-danger">*</span></label>
            <input asp-for="FullNameEn" class="form-control" />
            <span asp-validation-for="FullNameEn" class="text-danger"></span>
        </div>

        <div class="col-md-6 col-12">
            <label class="form-label">@Localizer["FullNameArabic"]</label>
            <input asp-for="FullNameAr" class="form-control" dir="rtl" />
            <span asp-validation-for="FullNameAr" class="text-danger"></span>
        </div>

        <div class="col-md-3 col-sm-6 col-12">
            <label class="form-label">@Localizer["DateOfBirth"] <span class="text-danger">*</span></label>
            <input asp-for="DateOfBirth" class="form-control" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="col-md-3 col-sm-6 col-12">
            <label class="form-label">@Localizer["Gender"] <span class="text-danger">*</span></label>
            <select asp-for="Gender" class="form-select">
                <option value="M">@Localizer["Male"]</option>
                <option value="F">@Localizer["Female"]</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="col-md-6 col-12">
            <label class="form-label">@Localizer["Phone"]</label>
            <input asp-for="PhoneNumber" class="form-control" type="tel" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="col-md-6 col-12">
            <label class="form-label">@Localizer["Email"]</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6 col-12">
            <label class="form-label">@Localizer["HearingLossType"]</label>
            <select asp-for="HearingLossType" class="form-select">
                <option value="">-- @Localizer["Select"] --</option>
                <option value="Sensorineural">@Localizer["Sensorineural"]</option>
                <option value="Conductive">@Localizer["Conductive"]</option>
                <option value="Mixed">@Localizer["Mixed"]</option>
                <option value="Normal">@Localizer["Normal"]</option>
            </select>
            <span asp-validation-for="HearingLossType" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label class="form-label">@Localizer["Notes"]</label>
            <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4 d-flex flex-column flex-sm-row justify-content-end gap-2">
        <a asp-action="Details" asp-route-id="@ViewContext.RouteData.Values["id"]" class="btn btn-outline-secondary">
            <i class="bi bi-x-lg"></i> @Localizer["Cancel"]
        </a>
        <button type="submit" class="btn btn-xenon">
            <i class="bi bi-check-lg"></i> @Localizer["SaveChanges"]
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
