@model IEnumerable<XenonClinic.Web.Models.PatientDto>
@{
    ViewData["Title"] = "Patients";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Patients</h2>
        <p class="text-muted">Search and manage patient records</p>
    </div>
    <a class="btn btn-xenon" asp-action="Create"><i class="bi bi-plus-lg"></i> New Patient</a>
</div>
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search by name or Emirates ID" />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</form>
<div class="card card-rounded">
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Emirates ID</th>
                    <th>Branch</th>
                    <th>Phone</th>
                    <th>Hearing Loss</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr>
                        <td>@patient.FullNameEn</td>
                        <td>@patient.EmiratesId</td>
                        <td>@patient.BranchName</td>
                        <td>@patient.PhoneNumber</td>
                        <td>@patient.HearingLossType</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
