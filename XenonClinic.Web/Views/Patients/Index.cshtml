@model XenonClinic.Web.Models.PaginatedList<XenonClinic.Web.Models.PatientDto>
@{
    ViewData["Title"] = "Patients";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Patients</h2>
        <p class="text-muted">@Model.TotalCount total patients</p>
    </div>
    <a class="btn btn-xenon" asp-action="Create"><i class="bi bi-plus-lg"></i> New Patient</a>
</div>
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search by name or Emirates ID" />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</form>
<div class="card card-rounded">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Emirates ID</th>
                    <th>Branch</th>
                    <th>Phone</th>
                    <th>Hearing Loss</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr>
                        <td>@patient.FullNameEn</td>
                        <td>@patient.EmiratesId</td>
                        <td>@patient.BranchName</td>
                        <td>@patient.PhoneNumber</td>
                        <td>@patient.HearingLossType</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.TotalPages > 1)
    {
        <div class="card-footer bg-white">
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-sm mb-0 justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-search="@ViewBag.Search">
                            Previous
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-search="@ViewBag.Search">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-search="@ViewBag.Search">
                            Next
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="text-center mt-2 small text-muted">
                Page @Model.PageIndex of @Model.TotalPages (Showing @Model.Count of @Model.TotalCount patients)
            </div>
        </div>
    }
</div>
