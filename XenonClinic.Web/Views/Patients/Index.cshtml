@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.PaginatedList<XenonClinic.Web.Models.PatientDto>
@{
    ViewData["Title"] = Localizer["Patients"];
}
<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-3 gap-2">
    <div>
        <h2 class="mb-0">@Localizer["Patients"]</h2>
        <p class="text-muted">@Model.TotalCount @Localizer["TotalPatients"]</p>
    </div>
    <a class="btn btn-xenon" asp-action="Create"><i class="bi bi-plus-lg"></i> @Localizer["NewPatient"]</a>
</div>
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="@Localizer["SearchPatients"]" />
        <button class="btn btn-outline-secondary" type="submit">@Localizer["Search"]</button>
    </div>
</form>
<div class="card card-rounded">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>@Localizer["Name"]</th>
                    <th class="d-none d-md-table-cell">@Localizer["EmiratesID"]</th>
                    <th class="d-none d-lg-table-cell">@Localizer["Branch"]</th>
                    <th class="d-none d-sm-table-cell">@Localizer["Phone"]</th>
                    <th class="d-none d-lg-table-cell">@Localizer["HearingLoss"]</th>
                    <th class="text-end">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@patient.Id" class="text-decoration-none fw-semibold">
                                @patient.FullNameEn
                            </a>
                        </td>
                        <td class="d-none d-md-table-cell">@patient.EmiratesId</td>
                        <td class="d-none d-lg-table-cell">@patient.BranchName</td>
                        <td class="d-none d-sm-table-cell">@patient.PhoneNumber</td>
                        <td class="d-none d-lg-table-cell">
                            @if (!string.IsNullOrEmpty(patient.HearingLossType))
                            {
                                <span class="badge bg-info">@patient.HearingLossType</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-outline-primary" title="@Localizer["View"]">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-outline-secondary" title="@Localizer["Edit"]">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.TotalPages > 1)
    {
        <div class="card-footer bg-white">
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-sm mb-0 justify-content-center flex-wrap">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-search="@ViewBag.Search">
                            @Localizer["Previous"]
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-search="@ViewBag.Search">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-search="@ViewBag.Search">
                            @Localizer["Next"]
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="text-center mt-2 small text-muted">
                @Localizer["Page"] @Model.PageIndex @Localizer["Of"] @Model.TotalPages (@Localizer["Showing"] @Model.Count @Localizer["Of"] @Model.TotalCount @Localizer["Patients"].Value.ToLower())
            </div>
        </div>
    }
</div>
