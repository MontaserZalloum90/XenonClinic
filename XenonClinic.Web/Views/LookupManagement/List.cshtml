@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.LookupListViewModel
@{
    ViewData["Title"] = Model.LookupTypeName;
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-2">
    <div>
        <h4 class="mb-0">@Localizer[Model.LookupTypeName]</h4>
        @if (!string.IsNullOrEmpty(Model.TenantName))
        {
            <small class="text-muted">@Localizer["Tenant"]: @Model.TenantName</small>
        }
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Index" asp-route-tenantId="@Model.TenantId" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>@Localizer["Back to Dashboard"]
        </a>
        @if (Model.CanCreate)
        {
            <a asp-action="Create"
               asp-route-type="@Model.LookupType"
               asp-route-tenantId="@Model.TenantId"
               class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>@Localizer["Create New"]
            </a>
        }
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card card-rounded">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="showInactive" @(Model.IncludeInactive ? "checked" : "")
                       onchange="location.href='@Url.Action("List", new { type = Model.LookupType, tenantId = Model.TenantId })?includeInactive=' + this.checked">
                <label class="form-check-label" for="showInactive">@Localizer["Show Inactive"]</label>
            </div>
            <span class="text-muted">@Model.Items.Count @Localizer["items"]</span>
        </div>

        @if (!Model.Items.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox fs-1 text-muted"></i>
                <p class="text-muted mt-3">@Localizer["No items found. Click 'Create New' to add your first item."]</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-xenon align-middle">
                    <thead>
                        <tr>
                            <th style="width: 40px;"></th>
                            <th>@Localizer["Name"]</th>
                            <th>@Localizer["Code"]</th>
                            <th>@Localizer["Description"]</th>
                            <th class="text-center">@Localizer["Order"]</th>
                            <th>@Localizer["Status"]</th>
                            <th>@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr class="@(!item.IsActive ? "table-secondary" : "")">
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ColorCode))
                                    {
                                        <span class="d-inline-block"
                                              style="width: 24px; height: 24px; background-color: @item.ColorCode; border-radius: 4px; border: 1px solid #dee2e6;">
                                        </span>
                                    }
                                    else if (!string.IsNullOrEmpty(item.IconClass))
                                    {
                                        <i class="@item.IconClass fs-5"></i>
                                    }
                                </td>
                                <td class="fw-semibold">
                                    @item.Name
                                    @if (item.IsSystemDefault)
                                    {
                                        <span class="badge bg-warning text-dark ms-2">
                                            <i class="bi bi-shield-check"></i> @Localizer["System"]
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Code))
                                    {
                                        <code>@item.Code</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <small class="text-muted">@item.Description</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-light text-dark">@item.DisplayOrder</span>
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">@Localizer["Active"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Localizer["Inactive"]</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        @if (item.CanEdit)
                                        {
                                            <a asp-action="Edit"
                                               asp-route-type="@Model.LookupType"
                                               asp-route-id="@item.Id"
                                               asp-route-tenantId="@Model.TenantId"
                                               class="btn btn-outline-primary"
                                               title="@Localizer["Edit"]">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                        @if (item.CanDelete)
                                        {
                                            <button type="button"
                                                    class="btn btn-outline-danger"
                                                    onclick="confirmDelete('@item.Id', '@item.Name')"
                                                    title="@Localizer["Delete"]">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Localizer["Confirm Delete"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>@Localizer["Are you sure you want to delete"] <strong id="deleteName"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle me-2"></i>@Localizer["This action cannot be undone."]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                <form id="deleteForm" method="post" asp-action="Delete" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="type" value="@Model.LookupType" />
                    <input type="hidden" name="id" id="deleteId" />
                    <input type="hidden" name="tenantId" value="@Model.TenantId" />
                    <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteName').textContent = name;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}
