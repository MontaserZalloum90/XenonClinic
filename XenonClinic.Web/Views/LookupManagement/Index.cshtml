@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model XenonClinic.Web.Models.LookupManagementDashboardViewModel
@{
    ViewData["Title"] = Localizer["Lookup Management"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">@Localizer["Lookup Management"]</h4>
        @if (!string.IsNullOrEmpty(Model.TenantName))
        {
            <small class="text-muted">@Localizer["Tenant"]: @Model.TenantName</small>
        }
    </div>
</div>

<div class="alert alert-info">
    <i class="bi bi-info-circle me-2"></i>
    @Localizer["Manage all system lookup values. These values can be customized per tenant and are used throughout the system."]
</div>

@{
    var groupedLookups = Model.LookupTypes.GroupBy(l => l.Category).OrderBy(g => g.Key);
}

@foreach (var group in groupedLookups)
{
    <div class="mb-4">
        <h5 class="mb-3">
            <i class="bi bi-folder2 me-2"></i>@Localizer[group.Key]
        </h5>
        <div class="row g-3">
            @foreach (var lookup in group)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card card-rounded h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-start mb-2">
                                <div class="flex-shrink-0">
                                    <i class="@lookup.IconClass fs-3 text-primary"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">@Localizer[lookup.DisplayName]</h6>
                                    <small class="text-muted">@Localizer[lookup.Description]</small>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge bg-secondary">
                                    @lookup.Count @Localizer["items"]
                                </span>
                                <a asp-action="List"
                                   asp-route-type="@lookup.TypeName"
                                   asp-route-tenantId="@Model.TenantId"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil-square me-1"></i>@Localizer["Manage"]
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
