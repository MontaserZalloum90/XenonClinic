{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=XenonClinic;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/xenonclinic-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "XenonClinic-SecureKey-12345678901234567890123456789012",
    "Issuer": "XenonClinic",
    "Audience": "XenonClinicReact",
    "ExpiryMinutes": 1440
  },
  "Redis": {
    "Enabled": false,
    "ConnectionString": "localhost:6379",
    "InstanceName": "XenonClinic_",
    "DefaultExpirationMinutes": 30,
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000,
    "AbortOnConnectFail": false
  },
  "RateLimiting": {
    "GlobalPermitLimit": 100,
    "GlobalWindowSeconds": 60,
    "GlobalQueueLimit": 10,
    "AuthPermitLimit": 5,
    "AuthWindowSeconds": 60,
    "ApiTokenLimit": 50,
    "ApiQueueLimit": 5,
    "ApiReplenishmentSeconds": 10,
    "ApiTokensPerPeriod": 10,
    "SensitivePermitLimit": 3
  },
  "SecurityHeaders": {
    "EnableInDevelopment": false,
    "EnableContentSecurityPolicy": true,
    "EnableHsts": true,
    "HstsMaxAgeSeconds": 31536000
  },
  "Seq": {
    "ServerUrl": "",
    "ApiKey": ""
  },
  "HealthChecks": {
    "Enabled": true,
    "DetailedErrors": false,
    "UIEnabled": false
  },
  "Metrics": {
    "Enabled": true,
    "Endpoint": "/metrics",
    "IncludeDefaultMetrics": true
  },
  "FeatureFlags": {
    "CacheMinutes": 5,
    "DefaultEnabled": false
  },
  "InputValidation": {
    "Enabled": true,
    "BlockMaliciousRequests": true,
    "CheckSqlInjection": true,
    "CheckXss": true,
    "CheckPathTraversal": true
  },
  "Modules": {
    "Enabled": [
      "CaseManagement",
      "Audiology"
    ],
    "Licenses": {
      "CaseManagement": {
        "LicenseKey": "XENON-CASE-2024-ENTERPRISE",
        "ExpiryDate": "2025-12-31",
        "MaxUsers": 100
      },
      "Audiology": {
        "LicenseKey": "XENON-AUD-2024-ENTERPRISE",
        "ExpiryDate": "2025-12-31",
        "MaxUsers": 100
      },
      "Laboratory": {
        "LicenseKey": "",
        "ExpiryDate": null,
        "MaxUsers": 0
      },
      "HR": {
        "LicenseKey": "",
        "ExpiryDate": null,
        "MaxUsers": 0
      },
      "Financial": {
        "LicenseKey": "",
        "ExpiryDate": null,
        "MaxUsers": 0
      },
      "Inventory": {
        "LicenseKey": "",
        "ExpiryDate": null,
        "MaxUsers": 0
      },
      "Sales": {
        "LicenseKey": "",
        "ExpiryDate": null,
        "MaxUsers": 0
      },
      "Procurement": {
        "LicenseKey": "",
        "ExpiryDate": null,
        "MaxUsers": 0
      }
    }
  }
}
