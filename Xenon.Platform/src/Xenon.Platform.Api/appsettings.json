{
  "ConnectionStrings": {
    "PlatformDb": "Server=(localdb)\\mssqllocaldb;Database=XenonPlatform;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "TenantDb": {
    "ConnectionStringTemplate": "Server=(localdb)\\mssqllocaldb;Database={0};Trusted_Connection=True;MultipleActiveResultSets=true",
    "MasterConnectionString": "Server=(localdb)\\mssqllocaldb;Database=master;Trusted_Connection=True"
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLong!",
    "Issuer": "xenon-platform",
    "TenantAudience": "xenon-tenant",
    "AdminAudience": "xenon-admin",
    "TenantTokenExpiryHours": 24,
    "AdminTokenExpiryHours": 8
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "https://localhost:3000"
    ]
  },
  "BackgroundServices": {
    "HealthCheckIntervalMinutes": 5,
    "SubscriptionCheckIntervalHours": 24
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
